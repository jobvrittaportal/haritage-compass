@model IEnumerable<TourTravel.Models.SitePages>
@{
    ViewData["Title"] = "Site Pages";
    Layout = "~/Admin/Views/Shared/_Layout-common.cshtml";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h4 class="mb-0">Site Pages</h4>
        <div class="d-flex align-items-center">
            <form method="get" asp-action="Index" class="me-2">
                <div class="input-group" style="width: 200px;">
                    <input type="text" name="search" value="@ViewBag.Search" class="form-control" placeholder="Search page/title" />
                    <button class="btn btn-outline-secondary"><i class="fa fa-search"></i></button>
                </div>
            </form>
            <a href="@Url.Action("Create", "SitePages")" class="btn btn-primary ms-2"><i class="fa fa-plus"></i> New</a>
        </div>
    </div>

    <table class="table table-striped align-middle">
        <thead>
            <tr>
                <th>Page</th>
                <th>Title</th>
                <th>Keywords</th>
                <th>Image</th>
                <th>Size (W×H)</th>
                <th class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr id="pageRow_@item.Id">
                    <td>@item.Page</td>
                    <td>@item.Title</td>
                    <td>@item.KeyWords</td>
                    <td>
                        @if (!string.IsNullOrEmpty(item.Image))
                        {
                            <img src="@item.Image" width="100" />
                        }
                    </td>
                    <td>@item.ImgWidth × @item.ImgHeight</td>
                    <td class="text-center">
                        <div class="d-flex justify-content-center align-items-center">
                            <a href="@Url.Action("Edit", "SitePages", new { id = item.Id })" class="btn btn-sm btn-primary me-2">
                                <i class="fa fa-edit"></i>
                            </a>
                            <button class="btn btn-sm btn-danger btn-delete" data-id="@item.Id">
                                <i class="fa fa-trash"></i>
                            </button>
                            @Html.AntiForgeryToken()
                        </div>
                    </td>

                </tr>
            }
        </tbody>
    </table>

    <nav>
        <ul class="pagination justify-content-center mt-3">
            @for (int i = 1; i <= ViewBag.TotalPages; i++)
            {
                <li class="page-item @(i == ViewBag.Page ? "active" : "")">
                    <a class="page-link" href="?page=@i&search=@ViewBag.Search">@i</a>
                </li>
            }
        </ul>
    </nav>
</div>

@section Scripts {
    <script>
        const token = document.querySelector('input[name="__RequestVerificationToken"]').value;

        document.querySelectorAll('.btn-delete').forEach(btn => {
            btn.addEventListener('click', async () => {
                if (!confirm('Are you sure you want to delete this page?')) return;

                const id = btn.dataset.id;
                const res = await fetch(`/admin/SitePages/Delete/${id}`, {
                    method: 'POST',
                    headers: { 'RequestVerificationToken': token }
                });
                const data = await res.json();

                if (data.success) {
                    document.getElementById(`pageRow_${id}`).remove();
                    alert('Site Page deleted!');
                } else {
                    alert(data.message);
                }
            });
        });
    </script>
}
