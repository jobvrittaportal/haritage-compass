@model TourTravel.Models.IntroVideo
@{
    ViewData["Title"] = "Add Intro Video";
    Layout = "~/Admin/Views/Shared/_Layout-common.cshtml";
}

<div class="container mt-4">
    <div class="card shadow border-0">
        <div class="card-header text-black d-flex justify-content-between align-items-center">
            <h5 class="mb-0"><i class="fa-solid fa-video me-2"></i>Add Intro Video</h5>
            <a href="@Url.Action("Index", "IntroVideo")" class="btn btn-light btn-sm">
                <i class="fa-solid fa-arrow-left"></i> Back
            </a>
        </div>

        <div class="card-body">
            <form id="introVideoForm" asp-action="Create" method="post" enctype="multipart/form-data" novalidate>
                @Html.AntiForgeryToken()

                <div class="row">
                    <div class="col-md-12 mb-3">
                        <label class="form-label fw-semibold">Title <span class="text-danger">*</span></label>
                        <input asp-for="Title" class="form-control" id="Title" placeholder="Enter title" required />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>

                    <div class="col-md-12 mb-3">
                        <label class="form-label fw-semibold">Description <span class="text-danger">*</span></label>
                        <textarea asp-for="Description" class="form-control" id="Description" rows="4" placeholder="Enter description" required></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="col-md-12 mb-3">
                        <label class="form-label fw-semibold">Video URL  <span class="text-danger">*</span></label>
                        <input asp-for="VideoUrl" id="VideoUrl" class="form-control" placeholder="Enter video URL (e.g. https://www.youtube.com/...)" required />
                        <span asp-validation-for="VideoUrl" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-semibold">Upload  Image (1920*1280) <span class="text-danger">*</span></label>
                        <input type="file" id="ImageFile" name="ImageFile" class="form-control" accept="image/*" required />
                        <span asp-validation-for="ImageUrl" class="text-danger"></span>
                    </div>
                </div>

                <div id="previewContainer" class="mb-3"></div>

                <div class="d-flex justify-content-end gap-2">
                    <button type="submit" class="btn btn-success">Save</button>
                    <button type="button" id="clearBtn" class="btn btn-secondary">Clear</button>
                </div>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.ckeditor.com/ckeditor5/40.2.0/classic/ckeditor.js"></script>

    <script>
        let editor;
        ClassicEditor
            .create(document.querySelector('#Description'))
            .then(newEditor => { editor = newEditor; })
            .catch(console.error);

        // ✅ Image Preview
        $('#ImageFile').on('change', function () {
            const file = this.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function (e) {
                    $('#previewContainer').html(`
                        <img src="${e.target.result}"
                             style="max-width: 200px; max-height: 150px; object-fit: contain;
                                    border-radius: 8px; border: 1px solid #ccc; padding: 4px;" />
                    `);
                };
                reader.readAsDataURL(file);
            }
        });

        // ✅ Clear Form
        $('#clearBtn').click(function () {
            $('#introVideoForm')[0].reset();
            if (editor) editor.setData('');
            $('#previewContainer').html('');
            showToast('Form cleared successfully.', 'bg-info');
        });

        // ✅ AJAX Submit
        $('#introVideoForm').submit(function (e) {
            e.preventDefault();

            const title = $('#Title').val()?.trim();
            const desc = editor.getData()?.trim();
            const videoUrl = $('#VideoUrl').val()?.trim();
            const imageFile = $('#ImageFile')[0].files[0];

            if (!title || !desc || !videoUrl || !imageFile) {
                showToast('Please fill all required fields.', 'bg-danger');
                return;
            }

            const allowedTypes = ['image/png', 'image/jpeg', 'image/jpg', 'image/webp'];
            const maxSize = 3 * 1024 * 1024;

            if (!allowedTypes.includes(imageFile.type)) {
                showToast('Only PNG, JPG, JPEG, or WEBP images are allowed.', 'bg-danger');
                return;
            }

            if (imageFile.size > maxSize) {
                showToast('Image must be smaller than 3MB.', 'bg-danger');
                return;
            }

            const img = new Image();
            img.src = URL.createObjectURL(imageFile);

            img.onload = function () {

                if (img.width !== 1920 || img.height !== 1280) {
                    showToast('Image dimensions must be exactly 1920x1280 pixels.', 'bg-danger');
                    return;
                }
            
            const formData = new FormData($('#introVideoForm')[0]);
            formData.set('Description', desc);

            $.ajax({
                url: '@Url.Action("Create", "IntroVideo")',
                type: 'POST',
                data: formData,
                processData: false,
                contentType: false,
                success: function (res) {
                    if (res.success) {
                        showToast(res.message, 'bg-success');
                        setTimeout(() => window.location.href = '/admin/IntroVideo', 3000);
                    } else {
                        showToast(res.message, 'bg-danger');
                    }
                },
                error: function () {
                    showToast('Something went wrong. Please try again.', 'bg-danger');
                }
            });
          }
        });
    </script>
}

