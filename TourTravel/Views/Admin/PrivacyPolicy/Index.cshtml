@using System.Text.RegularExpressions

@model IEnumerable<TourTravel.Models.PrivacyPolicy>
@{
    ViewData["Title"] = "Privacy Policy";
    Layout = "~/Admin/Views/Shared/_Layout-common.cshtml";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between mb-3 align-items-center">
        <h3></>Privacy Policy </h3>
        <a href="@Url.Action("Create", "PrivacyPolicy")" class="btn btn-success">
            <i class="fa-solid fa-plus me-1"></i> Add New
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-hover table-bordered align-middle">
            <thead class="table-dark">
                <tr>
                    <th>Title</th>
                    <th>Description</th>
                    <th style="width: 130px;">Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Title</td>

                            <td data-bs-toggle="tooltip" data-bs-placement="top"
                                title="@Regex.Replace(item.Description ?? "", "<.*?>", string.Empty)">
                                @{
                                    var plainText = Regex.Replace(item.Description ?? "", "<.*?>", string.Empty);
                                }
                                @(plainText.Length > 50 ? plainText.Substring(0, 50) + "..." : plainText)
                            </td>

                            <td class="text-center">
                                <!-- Edit Button -->

                                <a href="@Url.Action("Edit", "PrivacyPolicy", new { id = item.Id })"
                                   class="btn btn-icon btn-sm btn-warning me-1"
                                   title="Edit">
                                    <i class="fa-solid fa-pen-to-square"></i>
                                </a>


                                <!-- Delete Button -->
                                <form asp-action="Delete" asp-route-id="@item.Id" method="post"
                                      class="d-inline-block" onsubmit="return confirm('Are you sure?');">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-icon btn-sm btn-danger" title="Delete">
                                        <i class="fa-solid fa-trash"></i>
                                    </button>
                                </form>
                            </td>

                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="3" class="text-center text-muted">No Privacy Policy found.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


@section Scripts {
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    
    <script>
        $(function () {
            // Initialize Bootstrap tooltips
            $('[data-bs-toggle="tooltip"]').tooltip();
        });

    </script>
}
