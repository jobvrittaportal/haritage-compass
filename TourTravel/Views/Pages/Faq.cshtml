@model List<TourTravel.Models.FAQ>
@await Component.InvokeAsync("HeroSection")
<!-- faq area -->
<div class="faq-area py-120">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 mx-auto">
                <div class="site-heading text-center">
                    <span class="site-title-tagline">FAQ's</span>
                    <h2 class="site-title">General Question</h2>
                    <p>
                        It is a long established fact that a reader will be distracted by the readable content
                        of a page when looking at its layout.
                    </p>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-6 align-self-center">
                <div class="faq-img">
                    <img src="~/assets/img/bg/FAQ.jpg" alt="">
                </div>
            </div>
            <div class="col-lg-6 align-self-center">
                <div class="accordion" id="accordionExample">
                    @for (int i = 0; i < Model.Count; i++)
                    {
                        var faq = Model[i];
                        <div class="accordion-item">
                            <h2 class="accordion-header" id="heading@i">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                                        data-bs-target="#collapse@i" aria-expanded="false" aria-controls="collapse@i">
                                    <span>@(i + 1)</span> @faq.Question
                                </button>
                            </h2>
                            <div id="collapse@i" class="accordion-collapse collapse" aria-labelledby="heading@i" data-bs-parent="#accordionExample">
                                <div class="accordion-body">
                                    @Html.Raw(faq.Answer)
                                </div>
                            </div>
                        </div>
                    }
                </div>

            </div>
        </div>
    </div>
</div>
<!-- faq area end -->
