@model TourTravel.Models.WhyChooseUs
@{
    ViewData["Title"] = "Edit Why Choose Us";
    Layout = "~/Admin/Views/Shared/_Layout-common.cshtml";
}

<div class="container mt-4">
    <div class="card shadow border-0">
        <div class="card-header text-black d-flex justify-content-between align-items-center">
            <h5 class="mb-0">
                <i class="fa-solid fa-pen-to-square me-2"></i>Edit Why Choose Us
            </h5>
            <a href="@Url.Action("Index", "WhyChooseUs")" class="btn btn-light btn-sm">
                <i class="fa-solid fa-arrow-left"></i> Back
            </a>
        </div>

        <div class="card-body">
            <form id="whyChooseEditForm" asp-action="Edit" asp-route-id="@Model.Id" method="post" enctype="multipart/form-data" novalidate>
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Id" />

                <div class="row">
                   
                    <div class="col-md-12 mb-3">
                        <label class="form-label fw-semibold">Title <span class="text-danger">*</span></label>
                        <input asp-for="Title" id="Title" class="form-control" required />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>

                    <div class="col-12 mb-3">
                        <label class="form-label fw-semibold">Description <span class="text-danger">*</span></label>
                        <textarea asp-for="Description" id="Description" class="form-control" rows="3" required></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="col-6 mb-3">
                        <label class="form-label fw-semibold">Upload Image (420×420)</label>
                        <input type="file" id="ImageFile" name="newImage" class="form-control" accept="image/*" />
                        <small class="text-muted">Leave blank to keep current image.</small>
                        <span asp-validation-for="ImageUrl" class="text-danger"></span>
                    </div>
                </div>

                <div id="previewContainer" class="mb-3">
                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                    {
                        <img src="@Model.ImageUrl" style="max-width: 200px; max-height: 150px; object-fit: cover; border-radius: 8px; border: 1px solid #ccc; padding: 3px;" />
                    }
                </div>

                <div class="d-flex justify-content-end gap-2">
                    <button type="submit" class="btn btn-success">Update</button>
                    <button type="button" id="clearBtn" class="btn btn-secondary">Clear</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Toast container -->
<div class="position-fixed top-0 end-0 p-3" style="z-index: 99999;">
    <div id="toastContainer"></div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        // ✅ Image Preview
        $('#ImageFile').on('change', function () {
            const file = this.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = e => {
                    $('#previewContainer').html(`<img src="${e.target.result}" style="max-width: 200px; max-height: 150px; object-fit: cover; border-radius: 8px; border: 1px solid #ccc; padding: 3px;" />`);
                };
                reader.readAsDataURL(file);
            }
        });

        // ✅ Clear Form
        $('#clearBtn').click(function () {
            $('#Title').val('');
            $('#Description').val('');
            $('#ImageFile').val('');
            $('#previewContainer').html('');
            showToast('Form cleared successfully.', 'bg-info');
        });

        // ✅ Submit Edit Form (AJAX)
        $('#whyChooseEditForm').submit(function (e) {
            e.preventDefault();

            const title = $('#Title').val().trim();
            const desc = $('#Description').val().trim();
            const imageFile = $('#ImageFile')[0].files[0];

            if (!title || !desc) {
                showToast('Please fill all required fields.', 'bg-danger');
                return;
            }

            // Optional: Validate image
            if (imageFile) {
                const allowedTypes = ['image/png', 'image/jpeg', 'image/jpg'];
                const maxSize = 5 * 1024 * 1024; // 5MB limit

                if (!allowedTypes.includes(imageFile.type)) {
                    showToast('Only PNG, JPG, or JPEG images are allowed.', 'bg-danger');
                    return;
                }
                if (imageFile.size > maxSize) {
                    showToast('Image size must be less than 5MB.', 'bg-danger');
                    return;
                }

               
                const img = new Image();
                img.src = URL.createObjectURL(imageFile);
                img.onload = function () {
                    if (img.width !== 60 || img.height !== 60) {
                        showToast('Image dimensions must be exactly 420x420 pixels.', 'bg-danger');
                        return;
                    }
                    submitEditForm(); 
                };
                img.onerror = function () {
                    showToast('Invalid image file.', 'bg-danger');
                };
            } else {
                submitEditForm(); 
            }
        });

        // ✅ AJAX Function
        function submitEditForm() {
            const formData = new FormData($('#whyChooseEditForm')[0]);

            $.ajax({
                url: '@Url.Action("Edit", "WhyChooseUs")',
                type: 'POST',
                data: formData,
                processData: false,
                contentType: false,
                success: function (res) {
                    if (res.success) {
                        showToast(res.message, 'bg-success');
                        setTimeout(() => window.location.href = '/admin/WhyChooseUs', 3000);
                    } else {
                        showToast(res.message, 'bg-danger');
                    }
                },
                error: function () {
                    showToast('Something went wrong. Please try again.', 'bg-danger');
                }
            });
        }
    </script>
}
