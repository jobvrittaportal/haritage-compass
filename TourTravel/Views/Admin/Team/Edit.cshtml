@model TourTravel.Models.Team

@{
    ViewData["Title"] = "Edit Team";
    Layout = "~/Admin/Views/Shared/_Layout-common.cshtml";
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.5.13/cropper.min.css" rel="stylesheet" />
<script src="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.5.13/cropper.min.js"></script>


<div class="container mt-4">
    <div class="card shadow border-0">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0"><i class="fa fa-edit me-2"></i>Edit Team Member</h5>
            <a href="@Url.Action("Index", "Team")" class="btn btn-light btn-sm">
                <i class="fa-solid fa-arrow-left"></i> Back
            </a>
        </div>

        <div class="card-body">
            <form id="teamForm" method="post" enctype="multipart/form-data" asp-action="Edit" asp-route-id="@Model.Id" novalidate>
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Id" id="Id" />

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-semibold">Name <span class="text-danger">*</span></label>
                        <input asp-for="Name" class="form-control" id="Name" required />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-semibold">Role <span class="text-danger">*</span></label>
                        <input asp-for="Role" class="form-control" id="Role" required />
                        <span asp-validation-for="Role" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-semibold">Email <span class="text-danger">*</span></label>
                        <input asp-for="Email" class="form-control" id="Email" required />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-semibold">Phone <span class="text-danger">*</span></label>
                        <input asp-for="Phone" class="form-control" id="Phone" required />
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-semibold">Facebook</label>
                        <input asp-for="Facebook" class="form-control" />
                    </div>

                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-semibold">Twitter</label>
                        <input asp-for="Twitter" class="form-control" />
                    </div>

                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-semibold">Instagram</label>
                        <input asp-for="Instagram" class="form-control" />
                    </div>

                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-semibold">LinkedIn</label>
                        <input asp-for="LinkedIn" class="form-control" />
                    </div>

                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-semibold">YouTube</label>
                        <input asp-for="YouTube" class="form-control" />
                    </div>

                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-semibold">Upload Image (800×600)<span class="text-danger">*</span></label>
                        <input type="file" name="ImageFile" id="ImageFile" class="form-control" accept="image/*" />
                        @if (!string.IsNullOrEmpty(Model.ImageUrl))
                        {
                            <div id="previewContainer" class="mb-3 text-center"></div>

                        }
                    </div>

                    <div class="col-md-12 mb-3">
                        <label class="form-label fw-semibold">Introduction<span class="text-danger">*</span></label>
                        <textarea asp-for="Introduction" id="Introduction" class="form-control" rows="4"></textarea>
                    </div>

                    <div class="col-md-12 mb-3">
                        <label class="form-label fw-semibold">Biography<span class="text-danger">*</span></label>
                        <textarea asp-for="Biography" id="Biography" class="form-control" rows="6"></textarea>
                    </div>
                </div>

                <div class="d-flex justify-content-end gap-2 mt-3">
                    <button type="submit" class="btn btn-success">Update</button>
                    <button type="button" id="clearBtn" class="btn btn-secondary">Clear</button>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="modal fade" id="cropperModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered cropper-modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Crop Image (800×600)</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body d-flex align-items-center justify-content-center">
                <img id="cropImage" alt="Image to crop" />
            </div>

            <div class="modal-footer">
                <button type="button" id="cropBtn" class="btn btn-primary">Crop & Save</button>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>

<style>
    .cropper-modal-dialog {
        max-width: 860px !important;
    }

    #cropperModal .modal-body {
        height: 640px !important;
        overflow: hidden;
        padding: 10px;
    }

    #cropImage {
        max-width: 100%;
        max-height: 100%;
        display: block;
        background: #f3f3f3;
    }
</style>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.ckeditor.com/ckeditor5/41.4.2/classic/ckeditor.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.5.13/cropper.min.js"></script>

    <script>
        let introEditor, bioEditor;
        let cropper = null;
        let croppedBlob = null;

        ClassicEditor.create(document.querySelector('#Introduction'))
            .then(editor => introEditor = editor);

        ClassicEditor.create(document.querySelector('#Biography'))
            .then(editor => bioEditor = editor);

        // ⭐ OPEN CROP MODAL
               // ⭐ OPEN CROP MODAL — Blog reference
        $('#ImageFile').on('change', function (e) {

            const file = e.target.files[0];
            if (!file) return;

            const allowedTypes = ['image/png', 'image/jpeg', 'image/jpg'];
            if (!allowedTypes.includes(file.type)) {
                showToast('Only PNG, JPG, JPEG allowed.', 'bg-danger');
                return;
            }

            const reader = new FileReader();
            reader.onload = function (event) {

                $('#cropImage').attr('src', event.target.result);

                if (cropper) {
                    cropper.destroy();
                    cropper = null;
                }

                const modalEl = $('#cropperModal');
                const modal = new bootstrap.Modal(document.getElementById('cropperModal'));
                modal.show();

                // remove old listeners
                modalEl.off('shown.bs.modal');
                modalEl.off('hidden.bs.modal');

                modalEl.on('shown.bs.modal', function () {
                    cropper = new Cropper(document.getElementById('cropImage'), {
                        aspectRatio: 4 / 3,
                        viewMode: 1,
                        autoCropArea: 1,
                        responsive: true,
                        movable: true,
                        zoomable: true,
                        dragMode: 'move',
                        cropBoxMovable: true,
                        cropBoxResizable: false,
                        background: false,
                        guides: false,
                    });
                });

                modalEl.on('hidden.bs.modal', function () {
                    if (cropper) {
                        cropper.destroy();
                        cropper = null;
                    }
                });

            };

            reader.readAsDataURL(file);
        });

        // ⭐ CROP BUTTON — Blog reference
        $('#cropBtn').click(function () {

            if (!cropper) return;

            cropper.getCroppedCanvas({
                width: 800,
                height: 600
            }).toBlob(function (blob) {

                croppedBlob = blob;

                const previewUrl = URL.createObjectURL(blob);

                // remove old preview (including existing model image)
                $("#previewContainer").html(`
                    <img src="${previewUrl}" class="img-thumbnail shadow-sm mt-2"
                         style="max-width:150px; border-radius:10px;" />
                `);

                // hide modal
                $("#cropperModal").modal("hide");
            });

        });


        // ⭐ CLEAR BUTTON (unchanged)
               $('#clearBtn').click(() => {
            // Clear all text inputs manually
            $('#Name, #Role, #Email, #Phone, #Facebook, #Twitter, #Instagram, #LinkedIn, #YouTube').val('');

            // Clear CKEditor instances
            if (introEditor) introEditor.setData('');
            if (bioEditor) bioEditor.setData('');

            // Remove image preview
            $('#previewContainer').empty();

            // Reset file input
            $('#ImageFile').val('');

            // Reset cropped blob
            croppedBlob = null;

            // Show toast
            showToast('Form cleared successfully!', 'bg-info');
        });

        // ⭐ VALIDATION (unchanged)
        const emailRegex = /^[^\s@@]+@@[^\s@@]+\.[^\s@@]+$/;
        const phoneRegex = /^(\+?\d{1,3}[- ]?)?\d{10,15}$/;

        // ⭐ SUBMIT HANDLER
        $('#teamForm').submit(function (e) {
            e.preventDefault();

            const name = $('#Name').val().trim();
            const role = $('#Role').val().trim();
            const email = $('#Email').val().trim();
            const phone = $('#Phone').val().trim();
            const intro = introEditor ? introEditor.getData().trim() : '';
            const bio = bioEditor ? bioEditor.getData().trim() : '';

            if (!name || !role || !email || !phone || !intro || !bio) {
                showToast('Please fill all required fields.', 'bg-danger');
                return;
            }

            if (!emailRegex.test(email)) {
                showToast('Please enter a valid email address.', 'bg-danger');
                return;
            }

            if (!phoneRegex.test(phone)) {
                showToast('Please enter a valid phone number.', 'bg-danger');
                return;
            }

            const file = $('#ImageFile')[0].files[0];
            const hasOldImage = '@Model.ImageUrl' !== '';

            if (!hasOldImage && !file) {
                showToast('Please upload an image.', 'bg-danger');
                return;
            }

            submitForm();
        });

        // ⭐ FINAL AJAX — only added croppedBlob handling
        function submitForm() {
            const intro = introEditor ? introEditor.getData().trim() : '';
            const bio = bioEditor ? bioEditor.getData().trim() : '';

            const formData = new FormData($('#teamForm')[0]);
            formData.set('Introduction', intro);
            formData.set('Biography', bio);

            if (croppedBlob) {
                formData.delete("ImageFile");
                formData.append("ImageFile", croppedBlob, "cropped-image.jpg");
            }

            $.ajax({
                url: `/admin/Team/Edit/${$('#Id').val()}`,
                type: 'POST',
                data: formData,
                processData: false,
                contentType: false,
                success: function (res) {
                    if (res.success) {
                        showToast(res.message, 'bg-success');
                        setTimeout(() => window.location.href = '/admin/Team', 3000);
                    } else {
                        showToast(res.message, 'bg-danger');
                    }
                },
                error: function () {
                    showToast('An error occurred while saving.', 'bg-danger');
                }
            });
        }

    </script>
}

}
