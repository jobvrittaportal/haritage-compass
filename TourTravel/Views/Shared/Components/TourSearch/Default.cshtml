@model List<TourTravel.Controllers.PackagessDto>

@{
    bool showHeading = ViewData["ShowHeading"] as bool? ?? true;
    string columnClass = ViewData["ColumnClass"] as string ?? "col-md-6 col-lg-4";
}

<div class="tour-area py-80">

    <div class="container">
        <div class="row">
            @if (showHeading)
            {
                <div class="col-lg-6 mx-auto">
                    <div class="site-heading text-center">
                        <span class="site-title-tagline">Top Tour</span>
                        <h2 class="site-title">Top Tour Package</h2>
                        <p>
                            Explore our best tour packages across India — from Jaipur’s royal palaces to Kerala’s tranquil backwaters.
                        </p>
                    </div>
                </div>
            }
        </div>

        <div class="row align-items-center">
            @if (Model == null || !Model.Any())
            {
                <div class="col-12 text-center py-5">
                    <img src="https://cdn-icons-png.flaticon.com/512/7486/7486761.png"
                         alt="No Results" width="120" class="mb-3 opacity-75" />
                    <h4 class="text-muted">No packages found by this search</h4>
                </div>
            }
            else
            {

                @foreach (var tour in Model)
                {
                    <div class="@columnClass">
                        <div class="tour-item">
                            <div class="tour-img">


                                <img src="@(tour.PackageImage)" alt="@tour.Name">
                            </div>

                            <div class="tour-meta">
                                <ul>
                                    <li><i class="far fa-clock"></i> @tour.Duration</li>
                                    <li><i class="far fa-user-friends"></i> @tour.MaxPerson Person</li>
                                    <li><i class="far fa-map-marker-alt"></i> @tour.CityName</li>
                                </ul>
                            </div>

                            <div class="tour-info">
                                <a asp-controller="Tours" asp-action="TourPackageDetails" asp-route-id="@tour.Id">
                                    <h5>@tour.Name</h5>
                                </a>
                                <div class="tour-rating">
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                </div>
                            </div>

                            <div class="tour-footer">
                                <div class="tour-price">
                                    ₹@tour.BasePrice.ToString("0") <small>/per person</small>
                                </div>

                                <button type="button" class="tour-btn book-now-btn"
                                        data-package-id="@tour.Id"
                                        data-bs-toggle="modal" data-bs-target="#contactModal">
                                    Book Now <i class="far fa-arrow-right"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</div>


<!-- Contact Form Modal -->
<div class="modal fade" id="contactModal" tabindex="-1" aria-labelledby="contactModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content enquiry-card">

            <!-- Header -->
            <div class="modal-header border-0 pb-0">
                <h4 class="modal-title fw-bold" id="contactModalLabel">
                    <i class="far fa-paper-plane me-2 text-warning"></i> Send Us An Enquiry
                </h4>
                <button type="button" class="btn-close shadow-none" data-bs-dismiss="modal"></button>
            </div>

            <!-- Body -->
            <div class="modal-body">
                <form method="post" action="" id="contact-form">

                    <div class="row g-4">

                        <!-- Name -->
                        <div class="col-md-6">
                            <label class="form-label fw-semibold">Full Name</label>
                            <div class="input-group custom-input-group">
                                <span class="input-group-text"><i class="far fa-user"></i></span>
                                <input type="text" id="name" name="name" class="form-control custom-input" placeholder="Enter your name" required>
                            </div>
                        </div>

                        <!-- Email -->
                        <div class="col-md-6">
                            <label class="form-label fw-semibold">Email Address</label>
                            <div class="input-group custom-input-group">
                                <span class="input-group-text"><i class="far fa-envelope"></i></span>
                                <input type="email" id="email" name="email" class="form-control custom-input" placeholder="Enter your email" required>
                            </div>
                        </div>

                        <!-- Phone -->
                        <div class="col-md-6">
                            <label class="form-label fw-semibold">Phone Number</label>
                            <div class="input-group custom-input-group">
                                <span class="input-group-text"><i class="far fa-phone"></i></span>
                                <input type="text" id="phoneNumber" name="PhoneNumber" class="form-control custom-input" placeholder="Enter your phone number" required>
                            </div>
                        </div>

                    </div>

                    <!-- CAPTCHA -->
                    <div class="mt-4">
                        <label class="form-label fw-semibold">Enter Captcha</label>
                        <div class="d-flex align-items-center gap-3">

                            <img id="captchaImage"
                                 src="/Captcha/GenerateCaptcha"
                                 class="captcha-img" />

                            <button type="button"
                                    class="btn btn-light border rounded-circle refresh-btn"
                                    id="refreshCaptcha">
                                <i class="fas fa-sync"></i>
                            </button>
                        </div>

                        <input type="text"
                               id="captchaInput"
                               class="form-control custom-input mt-3"
                               placeholder="Type the characters shown above"
                               required>
                    </div>

                    <!-- Submit -->
                    <div class="text-end mt-4">
                        <button type="submit" class="btn submit-btn px-5 py-2 fw-semibold">
                            Submit
                        </button>
                    </div>

                </form>
            </div>

        </div>
    </div>
</div>
<script src="https://www.google.com/recaptcha/api.js" async defer></script>
<script>
    let captchaToken = "";
    let selectedPackageId = null;

    document.addEventListener("DOMContentLoaded", () => {

        const form = document.getElementById("contact-form");
        const bookNowButtons = document.querySelectorAll(".book-now-btn");

        // ⭐ Load Captcha (Image + Text)
        async function refreshCaptcha() {
            try {
                const res = await fetch("/Captcha/GenerateCaptcha", {
                    method: "GET",
                    cache: "no-store"
                });

                const data = await res.json();

                // Show the new Captcha image
                document.getElementById("captchaImage").src = data.captchaImage;

                // Store the Captcha token for matching
                captchaToken = data.captchaText;

                console.log("Captcha (server):", captchaToken);

            } catch (error) {
                console.error("Captcha load error:", error);
            }
        }

        // Refresh Captcha when clicking refresh button
        document.getElementById("refreshCaptcha").addEventListener("click", () => {
            refreshCaptcha();
        });

        // Load captcha when modal opens
        const modal = document.getElementById("contactModal");
        modal.addEventListener("shown.bs.modal", refreshCaptcha);

        // Capture which package button was clicked
        bookNowButtons.forEach(btn => {
            btn.addEventListener("click", (e) => {
                selectedPackageId = e.currentTarget.getAttribute("data-package-id");
            });
        });

        // ⭐ Submit Form
        form.addEventListener("submit", async (e) => {
            e.preventDefault();

            const userCaptchaInput = document.getElementById("captchaInput").value.trim();
            if (!userCaptchaInput) {
                return showToast("Please enter the CAPTCHA.", "info");

            }

            const formData = {
                name: document.getElementById("name").value.trim(),
                email: document.getElementById("email").value.trim(),
                phoneNumber: document.getElementById("phoneNumber").value.trim(),

                // Captcha fields
                CaptchaInput: userCaptchaInput,
                CaptchaToken: captchaToken
            };




            try {
                const response = await fetch("@ViewBag.Baseurl/api/contact/addEnquiry", {
                    method: "POST",
                    headers: { "Content-Type": "application/json" },
                    body: JSON.stringify(formData),
                });

                const result = await response.json();

                if (response.ok) {

                    showToast("Enquiry sent successfully!", "success");

                    // Close modal
                    const modalInstance =
                        bootstrap.Modal.getInstance(document.getElementById("contactModal"));
                    modalInstance.hide();

                    // Reset form & refresh captcha
                    form.reset();
                    refreshCaptcha();

                    // Redirect to tour page
                    if (selectedPackageId) {
                        setTimeout(() => {
                            window.location.href = `/Tours/TourPackageDetails/${selectedPackageId}`;
                        }, 3000);
                    }

                } else {
                    return showToast(result.message || "Failed to send enquiry.", "error");
                }

            } catch (error) {
                console.error("Error:", error);
                return showToast("Something went wrong.", "error");
            }
        });
    });
</script>


