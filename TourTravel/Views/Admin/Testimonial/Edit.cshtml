@model TourTravel.Models.Testimonial
@{
    ViewData["Title"] = "Edit Testimonial";
    Layout = "~/Admin/Views/Shared/_Layout-common.cshtml";
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.5.13/cropper.min.css" rel="stylesheet" />
<script src="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.5.13/cropper.min.js"></script>

<div class="container mt-4">
    <div class="card shadow border-0">
        <div class="card-header text-black d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Edit Testimonial</h5>
            <a href="@Url.Action("Index", "Testimonial")" class="btn btn-light btn-sm">
                <i class="fa-solid fa-arrow-left"></i> Back
            </a>
        </div>

        <div class="card-body">
            <form id="submit" asp-action="Edit" method="post" novalidate enctype="multipart/form-data">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Id" />

                <div class="mb-3">
                    <label class="form-label fw-semibold">Author Name *</label>
                    <input asp-for="AuthorName" id="AuthorName" class="form-control" required />
                </div>

                <div class="mb-3">
                    <label class="form-label fw-semibold">Role *</label>
                    <input asp-for="Role" id="Role" class="form-control" required />
                </div>

                <div class="mb-3">
                    <label class="form-label fw-semibold">Rating *</label>
                    <select asp-for="Rating" id="Rating" class="form-control" required>
                        <option value="">-- Select Rating --</option>
                        <option value="1">1 - Very Poor</option>
                        <option value="2">2 - Poor</option>
                        <option value="3">3 - Average</option>
                        <option value="4">4 - Good</option>
                        <option value="5">5 - Excellent</option>
                    </select>
                </div>

                @* <div class="mb-3">
                    <label class="form-label fw-semibold">Quote</label><span class="text-danger">*</span>
                    <textarea asp-for="Quote" id="Quote" class="form-control" rows="5" placeholder="Enter Quote" required></textarea>
                    <span asp-validation-for="Quote" class="text-danger"></span>
                </div> *@
                <div class="mb-3">
                    <label class="form-label fw-semibold">Quote <span class="text-danger">*</span></label>
                    <textarea asp-for="Quote" id="Quote" class="form-control" rows="5" placeholder="Enter Quote" required></textarea>
                    <small id="quoteCounter" class="text-muted">0 / 150 characters</small>
                    <span asp-validation-for="Quote" class="text-danger"></span>
                </div>

                <!-- ⭐ IMAGE INPUT -->
                <div class="mb-3">
                    <label class="form-label fw-semibold">Upload Image (800×600)</label>
                    <input type="file" name="image" id="image" class="form-control" accept="image/*" />
                </div>

                <div id="previewContainer" class="mb-3">
                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                    {
                        <img src="@Model.ImageUrl" style="max-width:200px; max-height:150px; object-fit:cover;" />
                    }
                </div>

                <div class="d-flex justify-content-end gap-2">
                    <button type="submit" class="btn btn-success">Update</button>
                    <button type="button" id="clearBtn" class="btn btn-secondary">Clear</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Toast -->
<div class="position-fixed top-0 end-0 p-3" style="z-index: 99999;">
    <div id="toastContainer"></div>
</div>

<!-- ⭐ Crop Modal -->
<div class="modal fade" id="cropperModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" style="max-width:850px;">
        <div class="modal-content">

            <div class="modal-header">
                <h5 class="modal-title">Crop Image (800×600)</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body" style="height:600px; display:flex; justify-content:center; align-items:center;">
                <img id="cropImage" style="max-width:100%; max-height:100%; display:block;" />
            </div>

            <div class="modal-footer">
                <button type="button" id="cropBtn" class="btn btn-primary">Crop & Save</button>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
            </div>

        </div>
    </div>
</div>

<style>
    #cropperModal .modal-body {
        height: 600px;
        display: flex;
        justify-content: center;
        align-items: center;
        overflow: hidden;
        padding: 10px;
    }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.ckeditor.com/ckeditor5/41.4.2/classic/ckeditor.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.5.13/cropper.min.js"></script>

    <script>
        let editor, cropper, croppedBlob;

        // CKEditor
        ClassicEditor
            .create(document.querySelector('#Quote'))
            .then(newEditor => {
                editor = newEditor;

                setTimeout(() => {
                    const initialText = editor.getData().replace(/<\/?[^>]+>/gi, "").trim();
                    $("#quoteCounter").text(`${initialText.length} / 150 characters`);
                }, 300);


                editor.model.document.on('change:data', () => {
                    const text = editor.getData().replace(/<\/?[^>]+>/gi, "").trim();
                    const length = text.length;

                    $("#quoteCounter").text(`${length} / 150 characters`);

                    if (length > 150) {
                        showToast("Quote must be 150 characters or less.", "bg-danger");
                        editor.setData(text.substring(0, 150));
                        $("#quoteCounter").text(`150 / 150 characters`);
                    }
                });
            })
            .catch(console.error);
        // ClassicEditor.create(document.querySelector('#Quote'))
        //     .then(newEditor => editor = newEditor)
        //     .catch(err => console.error(err));


        // ⭐ OPEN CROP MODAL — REFERENCE BLOG STYLE
        $('#image').on('change', function () {
            const file = this.files[0];
            if (!file) return;

            const allowed = ['image/png', 'image/jpeg', 'image/jpg'];
            if (!allowed.includes(file.type)) {
                showToast('Only PNG, JPG, or JPEG allowed.', 'bg-danger');
                return;
            }

            if (file.size > 5 * 1024 * 1024) {
                showToast('Image must be less than 5MB.', 'bg-danger');
                return;
            }

            const reader = new FileReader();
            reader.onload = function (event) {

                if (cropper) {
                    cropper.destroy();
                    cropper = null;
                }

                $('#cropImage').attr('src', event.target.result);

                const modalEl = $('#cropperModal');
                const modal = new bootstrap.Modal(document.getElementById('cropperModal'));
                modal.show();

                // Remove previous event bindings
                modalEl.off('shown.bs.modal');
                modalEl.off('hidden.bs.modal');

                // ⭐ INIT CROP — EXACTLY LIKE BLOG REFERENCE
                modalEl.on('shown.bs.modal', function () {
                    cropper = new Cropper(document.getElementById('cropImage'), {
                        aspectRatio: 4 / 3,
                        viewMode: 0,
                        autoCropArea: 1,
                        responsive: true,
                        zoomable: true,
                        scalable: false,
                        movable: true,
                        cropBoxMovable: true,
                        cropBoxResizable: false,
                        dragMode: 'move',
                        background: false,
                        guides: false,
                        center: true
                    });
                });

                // ⭐ Destroy cropper on close
                modalEl.on('hidden.bs.modal', function () {
                    if (cropper) {
                        cropper.destroy();
                        cropper = null;
                    }
                });

            };

            reader.readAsDataURL(file);
        });



        // ⭐ CROP BUTTON — Reference logic
        $('#cropBtn').click(function () {
            if (!cropper) return;

            cropper.getCroppedCanvas({
                width: 800,
                height: 600
            }).toBlob(function (blob) {

                croppedBlob = blob;

                const previewUrl = URL.createObjectURL(blob);

                $('#previewContainer').html(
                    `<img src="${previewUrl}" style="max-width:200px; border-radius:10px; border:1px solid #ddd;" />`
                );

                $('#cropperModal').modal('hide');
            });
        });



        // ⭐ CLEAR BUTTON (unchanged)
        $('#clearBtn').click(() => {
            $('#AuthorName').val('');
            $('#Role').val('');
            $('#Rating').val('');
            if (editor) editor.setData('');
            croppedBlob = null;
            $('#previewContainer').html('');
            showToast('Form cleared successfully.', 'bg-info');
        });



        // ⭐ SUBMIT FORM — unchanged except crop check
        $('#submit').submit(function (e) {
            e.preventDefault();

            const author = $('#AuthorName').val().trim();
            const role = $('#Role').val().trim();
            const rating = $('#Rating').val().trim();
            const quote = editor ? editor.getData().trim() : '';

            if (!author || !role || !rating || !quote) {
                showToast('Please fill all required fields.', 'bg-danger');
                return;
            }

            if (rating < 1 || rating > 5) {
                showToast('Rating must be between 1 and 5.', 'bg-danger');
                return;
            }

            const newFile = $('#image')[0].files[0];

            // ⭐ If user selected a new file, cropping is required
            if (newFile && !croppedBlob) {
                showToast('Please crop the selected image before submitting.', 'bg-danger');
                return;
            }

            submitForm(quote);
        });



        // ⭐ FINAL SUBMIT — unchanged
        function submitForm(quote) {

            const formData = new FormData($('#submit')[0]);
            formData.set('quote', quote);

            if (croppedBlob) {
                formData.delete("image");
                formData.append("image", croppedBlob, "cropped-image.jpg");
            }

            $.ajax({
                url: '/admin/Testimonial/Edit',
                type: 'POST',
                data: formData,
                processData: false,
                contentType: false,
                success: function (res) {
                    if (res.success) {
                        showToast(res.message, 'bg-success');
                        setTimeout(() => window.location.href = '/admin/Testimonial', 3000);
                    } else {
                        showToast(res.message, 'bg-danger');
                    }
                },
                error: function () {
                    showToast('Error while updating.', 'bg-danger');
                }
            });
        }

    </script>
}

