@model List<TourTravel.Controllers.PackageDto>
@await Component.InvokeAsync("HeroSection")

<div class="container py-4">
    <h3 class="mb-4 fw-bold text-center text-uppercase text-warning">Available Tour Packages</h3>

    @if (Model == null || !Model.Any())
    {
        <p class="text-center text-muted">No packages found for the selected filters.</p>
    }
    else
    {
        <div class="row g-4">
            @foreach (var pkg in Model)
            {
                <div class="col-md-4">
                    <div class="card h-100 shadow-sm border-0 tour-card">
                        <img src="@pkg.PackageImage" class="card-img-top" alt="@pkg.PackageImage">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title fw-semibold">@pkg.Name</h5>
                           <p class="text-muted mb-2">@pkg.CityName</p> 
                            <p class="fw-bold text-warning">â‚¹@pkg.BasePrice</p>
                            <a href="/Package/Details/@pkg.Id" class="btn btn-outline-warning mt-auto">View Details</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

<style>
    .tour-card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .tour-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 20px rgba(0,0,0,0.15);
        }

    .card-img-top {
        height: 220px;
        object-fit: cover;
    }
</style>
