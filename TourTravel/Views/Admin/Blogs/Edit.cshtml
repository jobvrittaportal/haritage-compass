
@model TourTravel.Models.Blog

@{
    ViewData["Title"] = "Edit Blog";
    Layout = "~/Admin/Views/Shared/_Layout-common.cshtml";
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.5.13/cropper.min.css" rel="stylesheet" />
<script src="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.5.13/cropper.min.js"></script>

<div class="container mt-4">
    <div class="card shadow border-0">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0"><i class="fa-solid fa-newspaper me-2"></i>Edit Blog</h5>
            <a href="@Url.Action("Index", "Blogs")" class="btn btn-light btn-sm">
                <i class="fa-solid fa-arrow-left"></i> Back
            </a>
        </div>

        <div class="card-body">
            <form id="blogForm" enctype="multipart/form-data" method="post" asp-action="Edit" novalidate>
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Id" />

                <div class="mb-3">
                    <label class="form-label fw-semibold">Title <span class="text-danger">*</span></label>
                    <input asp-for="Title" class="form-control" id="Title" required />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-semibold">Author <span class="text-danger">*</span></label>
                    <input asp-for="Author" class="form-control" id="Author" required />
                    <span asp-validation-for="Author" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-semibold">Meta Title <span class="text-danger">*</span></label>
                    <input asp-for="MetaTitle" class="form-control" id="MetaTitle" required />
                    <span asp-validation-for="MetaTitle" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-semibold">Meta Description <span class="text-danger">*</span></label>
                    <textarea asp-for="MetaDescription" id="MetaDescription" class="form-control" rows="3" required></textarea>
                    <span asp-validation-for="MetaDescription" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-semibold">Slug URL <span class="text-danger">*</span></label>
                    <input asp-for="SlugUrl" class="form-control" id="SlugUrl" required />
                    <span asp-validation-for="SlugUrl" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-semibold">Content <span class="text-danger">*</span></label>
                    <textarea asp-for="Content" id="Content" class="form-control" rows="6" required></textarea>
                    <span asp-validation-for="Content" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-semibold">Upload Image (800×600) <span class="text-danger">*</span></label>
                    <input type="file" name="image" id="image" class="form-control" accept="image/*" required />
                    <div id="previewContainer" class="mt-2">
                        @if (!string.IsNullOrEmpty(Model.ImageUrl))
                        {
                            <img src="@Model.ImageUrl" alt="Blog Image" class="rounded"  style="max-width:100%; max-height:150px; " />
                        }
                    </div>
                </div>

                <div class="d-flex justify-content-end gap-2">
                    <button type="submit" class="btn btn-success">Update</button>
                    <button type="button" id="clearBtn" class="btn btn-secondary">Clear</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Toast -->
<div class="position-fixed top-0 end-0 p-3" style="z-index: 99999;">
    <div id="toastContainer"></div>
</div>

@* Modal *@
<div class="modal fade" id="cropperModal" tabindex="-1" aria-labelledby="cropperModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered cropper-modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Crop Image (800×600)</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body d-flex align-items-center justify-content-center">
                <!-- IMPORTANT: image element is forced to EXACT 800x600 -->
                <img id="cropImage" alt="Image to crop" />
            </div>
            <div class="modal-footer">
                <button type="button" id="cropBtn" class="btn btn-primary">Crop & Save</button>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>

<style>

    .cropper-modal-dialog {
        max-width: 860px !important;
    }


    #cropperModal .modal-body {
        height: 640px !important;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 10px;
        overflow: hidden;
    }


    #cropImage {
        max-width: 100%;
        max-height: 100%;
        display: block;
        background: #f3f3f3;
    }



    #previewImage {
        max-width: 100%;
        border-radius: 10px;
        border: 1px solid #ddd;
    }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.ckeditor.com/ckeditor5/41.4.2/classic/ckeditor.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.5.13/cropper.min.js"></script>

    <script>
        let editor, cropper, croppedBlob;

        // CKEditor
        ClassicEditor.create(document.querySelector('#Content'))
            .then(ed => editor = ed)
            .catch(console.error);

        // IMAGE SELECT → OPEN CROP MODAL
        $('#image').on('change', function (e) {

            // clear previous preview
            $('#previewContainer').html('');

            const file = e.target.files[0];
            if (!file) return;

            const allowed = ["image/png", "image/jpeg", "image/jpg"];
            const maxSize = 5 * 1024 * 1024;

            if (!allowed.includes(file.type)) {
                showToast("Only PNG, JPG, JPEG allowed.", "bg-danger");
                return;
            }

            if (file.size > maxSize) {
                showToast("Image must be less than 5MB.", "bg-danger");
                return;
            }

            const reader = new FileReader();
            reader.onload = function (ev) {

                // remove old cropper
                if (cropper) {
                    cropper.destroy();
                    cropper = null;
                }

                $('#cropImage').attr('src', ev.target.result);

                const modalEl = $('#cropperModal');
                const modal = new bootstrap.Modal(document.getElementById("cropperModal"));
                modal.show();

                modalEl.off("shown.bs.modal").on("shown.bs.modal", function () {

                    cropper = new Cropper(document.getElementById("cropImage"), {
                        aspectRatio: 4 / 3,
                        viewMode: 0,
                        autoCropArea: 1,
                        responsive: true,
                        zoomable: true,
                        movable: true,
                        cropBoxMovable: true,
                        cropBoxResizable: false,
                        dragMode: "move",
                        guides: false,
                        background: false
                    });
                });

                modalEl.off("hidden.bs.modal").on("hidden.bs.modal", function () {
                    if (cropper) {
                        cropper.destroy();
                        cropper = null;
                    }
                });
            };

            reader.readAsDataURL(file);
        });

        // CROP BUTTON
        $('#cropBtn').click(function () {
            if (!cropper) return;

            cropper.getCroppedCanvas({
                width: 800,
                height: 600
            }).toBlob(function (blob) {

                croppedBlob = blob;
                const preview = URL.createObjectURL(blob);

                $("#previewContainer").html(`
                    <img src="${preview}" style="max-width:100%; max-height:150px;" />
                `);

                $("#cropperModal").modal("hide");
            });
        });

        // FORM SUBMIT
        $('#blogForm').submit(function (e) {
            e.preventDefault();

            const title = $('#Title').val().trim();
            const author = $('#Author').val().trim();
            const metaTitle = $('#MetaTitle').val().trim();
            const metaDescription = $('#MetaDescription').val().trim();
            const slug = $('#SlugUrl').val().trim();
            const content = editor ? editor.getData().trim() : "";

            if (!title || !author || !metaTitle || !metaDescription || !slug || !content) {
                showToast("Please fill all required fields.", "bg-danger");
                return;
            }

            const formData = new FormData($('#blogForm')[0]);
            formData.set("Content", content);

            // If new image uploaded → attach cropped result only
            if (croppedBlob) {
                formData.delete("image");
                formData.append("image", croppedBlob, "cropped-image.jpg");
            }

            $.ajax({
                url: "/admin/Blogs/Edit",
                type: "POST",
                data: formData,
                processData: false,
                contentType: false,
                success: function (res) {
                    if (res.success) {
                        showToast(res.message, "bg-success");
                        setTimeout(() => window.location.href = "/admin/Blogs", 2000);
                    } else {
                        showToast(res.message, "bg-danger");
                    }
                },
                error: function () {
                    showToast("An error occurred while saving.", "bg-danger");
                }
            });
        });

        // CLEAR BUTTON
               $("#clearBtn").click(() => {

            // Clear all text inputs and textareas
            $("#Title, #Author, #MetaTitle, #MetaDescription, #SlugUrl").val("");

            // Clear CKEditor
            if (editor) editor.setData("");

            // Reset file input
            $("#image").val("");

            // Clear cropped image
            croppedBlob = null;

            // Clear preview
            $("#previewContainer").html("");

            // Show original image again if needed
            const originalImage = '@Model.ImageUrl';
            if (originalImage) {
                $("#previewContainer").html(`<img src="${originalImage}" class="rounded" style="max-width:100%; max-height:150px;" />`);
            }

            showToast("Form cleared successfully.", "bg-info");
        });

    </script>

}
