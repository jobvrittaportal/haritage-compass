@model TourTravel.Models.Gallery
@{
    ViewData["Title"] = "Edit Image";
    Layout = "~/Admin/Views/Shared/_Layout-common.cshtml";
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.5.13/cropper.min.css" rel="stylesheet" />
<script src="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.5.13/cropper.min.js"></script>

<div class="container mt-4">
    <div class="card shadow border-0">
        <div class="card-header text-black d-flex justify-content-between align-items-center">
            <h5 class="mb-0"><i class="fa-solid fa-image me-2"></i>Edit Image</h5>
            <a href="@Url.Action("Index", "Gallery")" class="btn btn-light btn-sm">
                <i class="fa-solid fa-arrow-left"></i> Back
            </a>
        </div>

        <div class="card-body">
            <form id="galleryEditForm" asp-action="Edit" asp-route-id="@Model.Id" method="post" enctype="multipart/form-data" novalidate>
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Id" />

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Title <span class="text-danger">*</span></label>
                        <input asp-for="Title" id="Title" class="form-control" required />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-semibold">Upload Image (420×420)</label>
                        <input type="file" id="ImageFile" name="newImage" class="form-control" accept="image/*" />
                        <small class="text-muted">Leave blank to keep the current image.</small>
                        <span asp-validation-for="ImageUrl" class="text-danger"></span>
                    </div>
                </div>

                <div id="previewContainer" class="mb-3">
                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                    {
                        <img src="@Model.ImageUrl" style="max-width:200px; max-height:150px; object-fit:cover;" />
                    }
                </div>

                <div class="d-flex justify-content-end gap-2">
                    <button type="submit" class="btn btn-success">Update</button>
                    <button type="button" id="clearBtn" class="btn btn-secondary">Clear</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Toast -->
<div class="position-fixed top-0 end-0 p-3" style="z-index:99999;">
    <div id="toastContainer"></div>
</div>

<!-- ⭐ Cropper Modal -->
<div class="modal fade" id="cropperModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" style="max-width:850px;">
        <div class="modal-content">

            <div class="modal-header">
                <h5 class="modal-title">Crop Image (420×420)</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body" style="height:600px; display:flex; justify-content:center; align-items:center;">
                <img id="cropImage" style="max-width:100%; max-height:100%; display:block;" />
            </div>

            <div class="modal-footer">
                <button type="button" id="cropBtn" class="btn btn-primary">Crop & Save</button>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
            </div>

        </div>
    </div>
</div>

<style>
    #cropperModal .modal-body {
        height: 600px;
        display: flex;
        justify-content: center;
        align-items: center;
        overflow: hidden;
        padding: 10px;
    }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.5.13/cropper.min.js"></script>

    <script>
        let cropper, croppedBlob;

        // ⭐ OPEN CROP MODAL (REFERENCE STYLE)
        $('#ImageFile').on('change', function (e) {
            const file = e.target.files[0];
            if (!file) return;

            const allowedTypes = ['image/png', 'image/jpeg', 'image/jpg'];
            if (!allowedTypes.includes(file.type)) {
                showToast('Only PNG, JPG, JPEG allowed.', 'bg-danger');
                return;
            }

            const reader = new FileReader();
            reader.onload = function (event) {

                // destroy old cropper if exists
                if (cropper) {
                    cropper.destroy();
                    cropper = null;
                }

                $('#cropImage').attr('src', event.target.result);

                const modalEl = $('#cropperModal');
                const modal = new bootstrap.Modal(document.getElementById('cropperModal'));
                modal.show();

                // IMPORTANT: remove duplicate previous event bindings
                modalEl.off('shown.bs.modal');
                modalEl.off('hidden.bs.modal');

                // ⭐ SAME INITIALIZATION AS BLOG REFERENCE
                modalEl.on('shown.bs.modal', function () {
                    cropper = new Cropper(document.getElementById('cropImage'), {
                        aspectRatio: 1,
                        viewMode: 0,
                        autoCropArea: 1,
                        responsive: true,
                        zoomable: true,
                        scalable: false,
                        movable: true,
                        cropBoxMovable: true,
                        cropBoxResizable: false,
                        dragMode: 'move',
                        background: false,
                        guides: false,
                        center: true
                    });
                });

                // ⭐ destroy cropper on modal close
                modalEl.on('hidden.bs.modal', function () {
                    if (cropper) {
                        cropper.destroy();
                        cropper = null;
                    }
                });

            };

            reader.readAsDataURL(file);
        });



        // ⭐ CROP BUTTON (reference behavior)
        $('#cropBtn').click(function () {
            if (!cropper) return;

            cropper.getCroppedCanvas({
                width: 420,
                height: 420
            }).toBlob(function (blob) {

                croppedBlob = blob;

                const previewUrl = URL.createObjectURL(blob);

                $('#previewContainer').html(
                    `<img src="${previewUrl}" style="max-width:200px; border-radius:10px; border:1px solid #ddd;" />`
                );

                $('#cropperModal').modal('hide');
            });
        });



        // ⭐ CLEAR BUTTON (unchanged)
        $('#clearBtn').click(function () {
            $('#Title').val('');
            $('#ImageFile').val('');
            croppedBlob = null;
            $('#previewContainer').html('');
            showToast('Form cleared successfully.', 'bg-info');
        });



        // ⭐ SUBMIT FORM (Reference behavior kept EXACTLY)
        $('#galleryEditForm').submit(function (e) {
            e.preventDefault();

            const title = $('#Title').val().trim();
            const selectedImage = $('#ImageFile')[0].files[0];

            if (!title) {
                showToast('Title is required.', 'bg-danger');
                return;
            }

            const formData = new FormData($('#galleryEditForm')[0]);

            // ⭐ If NEW image is selected → MUST BE CROPPED
            if (selectedImage) {

                if (!croppedBlob) {
                    showToast('Please crop the new image before submitting.', 'bg-danger');
                    return;
                }

                formData.delete("newImage");
                formData.append("newImage", croppedBlob, "cropped-image.jpg");
            }

            $.ajax({
                url: $('#galleryEditForm').attr('action'),
                type: 'POST',
                data: formData,
                processData: false,
                contentType: false,
                success: function (res) {
                    if (res.success) {
                        showToast(res.message, 'bg-success');
                        setTimeout(() => window.location.href = '/admin/gallery', 2000);
                    } else {
                        showToast(res.message, 'bg-danger');
                    }
                },
                error: function () {
                    showToast('Something went wrong. Please try again.', 'bg-danger');
                }
            });

        });

    </script>
}
