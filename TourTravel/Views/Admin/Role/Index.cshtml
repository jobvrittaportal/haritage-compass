@using Microsoft.AspNetCore.Identity
@model List<IdentityRole>

@{
    ViewData["Title"] = "Role Management";
    Layout = "~/Admin/Views/Shared/_Layout-common.cshtml";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between mb-3">
        <h3>Role Management</h3>
        <div>
            <input type="text" id="searchRole" class="form-control d-inline-block" placeholder="Search by name" style="width: 150px;" />
            @* <button class="btn btn-primary" id="btnSearchRole">Search</button> *@
            <button class="btn btn-outline-secondary" id="btnSearchRole">
                <i class="fa fa-search"></i>
            </button>
            <button class="btn btn-primary" id="btnAddRole"> <i class="fa fa-plus"></i> New</button>
        </div>
    </div>

    <table class="table table-bordered table-hover" id="roleTable">
        <thead>
            <tr>
                <th>S.No</th>
                <th>Name</th>
                <th style="width:180px;">Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                var sno = 1;
                foreach (var role in Model)
                {
                    <tr data-id="@role.Id" data-name="@role.Name">
                        <td>@sno</td>
                        <td>@role.Name</td>
                        <td>
                            <button class="btn btn-sm btn-primary btn-edit me-1"><i class="fa fa-edit"></i></button>
                            <button class="btn btn-sm btn-danger btn-delete"><i class="fa fa-trash"></i></button>
                        </td>
                    </tr>
                    sno++;
                }
            }
            else
            {
                <tr><td colspan="3" class="text-center text-muted">No roles found.</td></tr>
            }
        </tbody>
    </table>
</div>

<!-- Add/Edit Modal -->
<div class="modal fade" id="roleModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form id="roleForm">
                <div class="modal-header  text-white">
                    <h5 class="modal-title"  id="modalTitle">Add Role</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" id="RoleId" name="Id" />
                    <div class="mb-3">
                        <label class="form-label">Role Name</label>
                        <input type="text" class="form-control" id="Name" name="Name" required />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-success">Save</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteConfirmModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered" style="max-width: 400px;">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title w-100 text-center">Confirm Delete</h5>
            </div>
            <div class="modal-body text-center">
                Are you sure you want to delete?
            </div>
            <div class="modal-footer d-flex justify-content-center">
                <button id="confirmDeleteBtn" class="btn btn-danger">Delete</button>
                <button class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        $(function () {
            let deleteId = null;

            //  Search
            $('#btnSearchRole').click(function () {
                const search = $('#searchRole').val();
                window.location.href = '@Url.Action("Index", "Role")' + '?search=' + encodeURIComponent(search);
            });

            //  Add Role
            $('#btnAddRole').click(function () {
                $('#modalTitle').text('Add Role');
                $('#roleForm')[0].reset();
                $('#RoleId').val('');
                $('#roleModal').modal('show');
            });

            //  Edit Role
            $('#roleTable').on('click', '.btn-edit', function () {
                const row = $(this).closest('tr');
                $('#modalTitle').text('Edit Role');
                $('#RoleId').val(row.data('id'));
                $('#Name').val(row.data('name'));
                $('#roleModal').modal('show');
            });

            //  Delete Role (open confirmation)
            $('#roleTable').on('click', '.btn-delete', function () {
                deleteId = $(this).closest('tr').data('id');
                $('#deleteConfirmModal').modal('show');
            });

            //  Confirm delete
            $('#confirmDeleteBtn').click(function () {
                $.post('@Url.Action("Delete", "Role")', { Id: deleteId }, function (res) {
                    $('#deleteConfirmModal').modal('hide');
                    if (res.success) {
                        showToast(res.message, 'bg-success');
                        setTimeout(() => location.reload(), 3000);
                    } else {
                        showToast(res.message, 'bg-danger');
                    }
                });
            });

            //  Save (Add/Edit)
            $('#roleForm').submit(function (e) {
                e.preventDefault();
                const data = {
                    Id: $('#RoleId').val(),
                    Name: $('#Name').val()
                };
                const url = data.Id ? '@Url.Action("Edit", "Role")' : '@Url.Action("Create", "Role")';

                $.ajax({
                    url: url,
                    type: 'POST',
                    data: data,
                    success: function (res) {
                        if (res.success) {
                            $('#roleModal').modal('hide');
                            showToast(res.message, 'bg-success');
                            setTimeout(() => location.reload(), 3000);
                        } else {
                            showToast(res.message, 'bg-danger');
                        }
                    },
                    error: function () {
                        showToast('An unexpected error occurred.', 'bg-danger');
                    }
                });
            });
        });

    </script>
}
