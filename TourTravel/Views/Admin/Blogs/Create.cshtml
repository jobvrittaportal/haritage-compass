@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.ckeditor.com/ckeditor5/41.4.2/classic/ckeditor.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.5.13/cropper.min.js"></script>

    <script>
        let editor, cropper, croppedBlob;

        ClassicEditor.create(document.querySelector('#Content'))
            .then(newEditor => editor = newEditor)
            .catch(error => console.error(error));

       
        $('#image').on('change', function (e) {
            const file = e.target.files[0];
            if (!file) return;

            const allowedTypes = ['image/png', 'image/jpeg', 'image/jpg'];
            if (!allowedTypes.includes(file.type)) {
                showToast('Only PNG, JPG, or JPEG images are allowed.', 'bg-danger');
                return;
            }

            const reader = new FileReader();
            reader.onload = function (event) {

                if (cropper) {
                    cropper.destroy();
                    cropper = null;
                }
                $('#cropImage').attr('src', event.target.result);

                const modalEl = $('#cropperModal');
                const modal = new bootstrap.Modal(document.getElementById('cropperModal'));
                modal.show();

                // clear previous event 
                modalEl.off('shown.bs.modal');
                modalEl.off('hidden.bs.modal');


                        modalEl.on('shown.bs.modal', function () {
            cropper = new Cropper(document.getElementById('cropImage'), {
                aspectRatio: 4 / 3,
                viewMode: 0,              
        autoCropArea: 1,
        responsive: true,
            zoomable: true,          
            scalable: false,
            movable: true,
            cropBoxMovable: true,
            cropBoxResizable: false,
            dragMode: 'move',
            background: false,
            guides: false,
            center: true
            });
        });


                // On modal close → destroy cropper
                modalEl.on('hidden.bs.modal', function () {
                    if (cropper) {
                        cropper.destroy();
                        cropper = null;
                    }
                });

            };
            reader.readAsDataURL(file);
        });


        // Crop image
        $('#cropBtn').click(function () {
            if (!cropper) return;

            cropper.getCroppedCanvas({
                width: 800,
                height: 600
            }).toBlob(function (blob) {
                croppedBlob = blob;
                const previewUrl = URL.createObjectURL(blob);
                $('#previewImage').attr('src', previewUrl).show();
                $('#cropperModal').modal('hide');
            });
        });

        // Submit form
        $('#blogForm').submit(function (e) {
            e.preventDefault();

            const title = $('#Title').val().trim();
            const author = $('#Author').val().trim();
            const metaTitle = $('#MetaTitle').val().trim();
            const metaDescription = $('#MetaDescription').val().trim();
            const slug = $('#SlugUrl').val().trim();
            const content = editor ? editor.getData().trim() : '';

            if (!title || !author || !metaTitle || !metaDescription || !slug || !content) {
                showToast('Please fill all required fields.', 'bg-danger');
                return;
            }

            if (!croppedBlob) {
                showToast('Please upload and crop an image.', 'bg-danger');
                return;
            }

            const formData = new FormData($('#blogForm')[0]);
            formData.delete('image');
            formData.append('image', croppedBlob, 'cropped-image.jpg');
            formData.set('content', content);

            $.ajax({
                url: '/admin/Blogs/Create',
                type: 'POST',
                data: formData,
                processData: false,
                contentType: false,
                success: function (res) {
                    if (res.success) {
                        showToast(res.message, 'bg-success');
                        setTimeout(() => window.location.href = '/admin/Blogs', 3000);
                    } else {
                        showToast(res.message, 'bg-danger');
                    }
                },
                error: function () {
                    showToast('An error occurred while saving.', 'bg-danger');
                }
            });
        });

        // Clear form
        $('#clearBtn').click(() => {
            $('#blogForm')[0].reset();
            $('#previewImage').hide();
            croppedBlob = null;
            if (editor) editor.setData('');
            showToast('Form cleared successfully.', 'bg-info');
        });

       </script>
 }