@model IEnumerable<TourTravel.Models.Country>
@{
    ViewData["Title"] = "Countries";
    Layout = "~/Admin/Views/Shared/_Layout-common.cshtml";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h4 class="mb-0">Countries</h4>
        <div class="d-flex align-items-center">
            <form method="get" asp-action="Index" class="me-2">
                <div class="input-group" style="width: 200px;">
                    <input type="text" name="search" value="@ViewBag.Search" class="form-control" placeholder="Search country" />
                    <button class="btn btn-outline-secondary"><i class="fa fa-search"></i></button>
                </div>
            </form>
            <a href="@Url.Action("Create", "Country")" class="btn btn-primary ms-2"><i class="fa fa-plus"></i> New</a>
        </div>
    </div>

    <table class="table table-striped align-middle">
        <thead>
            <tr>
                <th>Name</th>
                <th>Is Destination</th>
                <th>Code</th>
                <th>Dial Code</th>
                <th class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr id="countryRow_@item.Id">
                    <td>@item.Name</td>
                    <td>@(item.IsDestination ? "Yes" : "No")</td>
                    <td>@item.Code</td>
                    <td>@item.DialCode</td>
                    <td class="text-center">
                        <a href="@Url.Action("Edit", "Country", new { id = item.Id })" class="btn btn-sm btn-primary me-1">
                            <i class="fa fa-edit"></i>
                        </a>
                        <button class="btn btn-sm btn-danger btn-delete" data-id="@item.Id">
                            <i class="fa fa-trash"></i>
                        </button>
                        @Html.AntiForgeryToken()
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <!-- Pagination -->
    @if (ViewBag.TotalPages > 1)
    {
        <nav aria-label="Page navigation">
            <ul class="pagination justify-content-center">
                <li class="page-item @(ViewBag.Page <= 1 ? "disabled" : "")">
                    <a class="page-link" href="@Url.Action("Index", new { search = ViewBag.Search, page = ViewBag.Page - 1 })">Previous</a>
                </li>

                @if (ViewBag.Page > 1)
                {
                    <li class="page-item">
                        <a class="page-link" href="@Url.Action("Index", new { search = ViewBag.Search, page = ViewBag.Page - 1 })">@(ViewBag.Page - 1)</a>
                    </li>
                }

                <li class="page-item active">
                    <span class="page-link">@ViewBag.Page</span>
                </li>

                @if (ViewBag.Page < ViewBag.TotalPages)
                {
                    <li class="page-item">
                        <a class="page-link" href="@Url.Action("Index", new { search = ViewBag.Search, page = ViewBag.Page + 1 })">@(ViewBag.Page + 1)</a>
                    </li>
                }

                <li class="page-item @(ViewBag.Page >= ViewBag.TotalPages ? "disabled" : "")">
                    <a class="page-link" href="@Url.Action("Index", new { search = ViewBag.Search, page = ViewBag.Page + 1 })">Next</a>
                </li>
            </ul>
        </nav>
    }

</div>

@section Scripts {
    <script>
        const token = document.querySelector('input[name="__RequestVerificationToken"]').value;

        document.querySelectorAll('.btn-delete').forEach(btn => {
            btn.addEventListener('click', async () => {
                if (!confirm('Are you sure you want to delete this country?')) return;

                const id = btn.dataset.id;
                const res = await fetch(`/admin/Country/Delete/${id}`, {
                    method: 'POST',
                    headers: { 'RequestVerificationToken': token }
                });
                const data = await res.json();

                if (data.success) {
                    document.getElementById(`countryRow_${id}`).remove();
                    alert('Country deleted!');
                } else {
                    alert(data.message);
                }
            });
        });
    </script>
}
