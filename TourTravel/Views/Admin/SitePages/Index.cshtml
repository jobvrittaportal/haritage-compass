@model IEnumerable<TourTravel.Models.SitePages>
@{
    ViewData["Title"] = "Site Pages";
    Layout = "~/Admin/Views/Shared/_Layout-common.cshtml";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h4 class="mb-0">Site Pages</h4>
        <div class="d-flex align-items-center">
            <form method="get" asp-action="Index" class="me-2">
                <div class="input-group" style="width: 200px;">
                    <input type="text" name="search" value="@ViewBag.Search" class="form-control" placeholder="Search page/title" />
                    <button class="btn btn-outline-secondary"><i class="fa fa-search"></i></button>
                </div>
            </form>
            <a href="@Url.Action("Create", "SitePages")" class="btn btn-primary ms-2"><i class="fa fa-plus"></i> New</a>
        </div>
    </div>

    <table class="table table-striped align-middle">
        <thead>
            <tr>
                <th>Page</th>
                <th>Title</th>
                <th>Keywords</th>
                <th>Image</th>
                <th>Size (W×H)</th>
                <th class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr id="pageRow_@item.Id">
                    <td>@item.Page</td>
                    <td>@item.Title</td>
                    <td>@item.KeyWords</td>
                    <td>
                        @if (!string.IsNullOrEmpty(item.Image))
                        {
                            <img src="@item.Image" width="100" />
                        }
                    </td>
                    <td>@item.ImgWidth × @item.ImgHeight</td>
                    <td class="text-center">
                        <div class="d-flex justify-content-center align-items-center">
                            <a href="@Url.Action("Edit", "SitePages", new { id = item.Id })" class="btn btn-sm btn-primary me-2">
                                <i class="fa fa-edit"></i>
                            </a>
                            <button class="btn btn-sm btn-danger btn-delete" data-id="@item.Id">
                                <i class="fa fa-trash"></i>
                            </button>
                            @Html.AntiForgeryToken()
                        </div>
                    </td>

                </tr>
            }
        </tbody>
    </table>

    <nav>
        <ul class="pagination justify-content-center mt-3">
            @for (int i = 1; i <= ViewBag.TotalPages; i++)
            {
                <li class="page-item @(i == ViewBag.Page ? "active" : "")">
                    <a class="page-link" href="?page=@i&search=@ViewBag.Search">@i</a>
                </li>
            }
        </ul>
    </nav>
</div>

<div class="modal fade" id="deleteConfirmModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered" style="max-width: 400px;">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title w-100 text-center">Confirm Delete</h5>
            </div>
            <div class="modal-body text-center">
                Are you sure you want to delete?
            </div>
            <div class="modal-footer d-flex justify-content-center">
                <button id="confirmDeleteBtn" class="btn btn-danger">Delete</button>
                <button class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <script>
        let deleteId = null;
        const token = document.querySelector('input[name="__RequestVerificationToken"]').value;
        const deleteModal = new bootstrap.Modal(document.getElementById('deleteConfirmModal'));

        // When delete button clicked, show modal
        document.querySelectorAll('.btn-delete').forEach(btn => {
            btn.addEventListener('click', () => {
                deleteId = btn.dataset.id;
                deleteModal.show();
            });
        });

        // Confirm delete
        document.getElementById('confirmDeleteBtn').addEventListener('click', async () => {
            if (!deleteId) return;

            try {
                const res = await fetch(`/admin/SitePages/Delete/${deleteId}`, {
                    method: 'POST',
                    headers: { 'RequestVerificationToken': token }
                });
                const data = await res.json();

                if (data.success) {
                    document.getElementById(`pageRow_${deleteId}`).remove();
                    deleteModal.hide();

                    //  Show success toast from server message
                    showToast(data.message || 'Site Page deleted successfully.', 'bg-success');
                    setTimeout(() => window.location.href = '/admin/SitePages', 3000);
                } else {
                    showToast(data.message || 'An error occurred while deleting.', 'bg-danger');
                }
            } catch (error) {
                showToast('A network error occurred. Please try again.', 'bg-danger');
            }

            deleteId = null;
        });
    </script>
}

