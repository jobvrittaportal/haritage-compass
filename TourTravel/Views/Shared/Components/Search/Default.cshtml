<!-- search area -->

<div class="search-area py-4">
    <div class="container">
        <div class="search-form-wrapper bg-white p-4 rounded-3 shadow-sm">
            <form id="searchForm">
                <div class="row g-3 align-items-end">

                    <div class="col-md-3 col-lg-3">
                        <label class="form-label fw-semibold">Destination</label>
                        @await Component.InvokeAsync("DestinationDropdown")
                    </div>

                    <div class="col-md-2 col-lg-2">
                        <label class="form-label fw-semibold">Check In</label>
                        <input type="date" id="checkIn" class="form-control" />
                    </div>

                    <div class="col-md-2 col-lg-2">
                        <label class="form-label fw-semibold">Check Out</label>
                        <input type="date" id="checkOut" class="form-control" />
                    </div>

                    <div class="col-md-2 col-lg-2">
                        <label class="form-label fw-semibold">Tour Type</label>
                        @await Component.InvokeAsync("TourTypeDropdown")
                    </div>

                    <div class="col-md-1 col-lg-1">
                        <label class="form-label fw-semibold">Persons</label>
                        <input type="number" id="maxPerson" min="1" class="form-control text-center">
                    </div>

                    <div class="col-md-2 col-lg-2 d-flex align-items-end">
                        <button type="button" id="findNow" class="btn btn-warning w-100 fw-semibold">
                            <i class="far fa-search me-2"></i> Find Now
                        </button>
                    </div>

                   @*  <div class="col-md-2 col-lg-2 d-flex align-items-end">
                        <a asp-controller="Tours" asp-action="Index" class="btn btn-warning w-100 fw-semibold d-flex align-items-center justify-content-center" style="text-decoration:none;">
                            <i class="far fa-search me-2"></i> Find Now
                        </a>
                    </div> *@


                </div>
            </form>
        </div>
    </div>
</div>

<script>
    // ---------------- SET DEFAULT MIN DATES ----------------
    document.addEventListener("DOMContentLoaded", function () {

        // Format today as yyyy-mm-dd
        let today = new Date();
        let yyyy = today.getFullYear();
        let mm = String(today.getMonth() + 1).padStart(2, '0');
        let dd = String(today.getDate()).padStart(2, '0');
        let todayStr = `${yyyy}-${mm}-${dd}`;

        // Set check-in min = today
        document.getElementById("checkIn").setAttribute("min", todayStr);

     

        // When check-in changes â†’ set check-out min = check-in
        document.getElementById("checkIn").addEventListener("change", function () {
            let checkInValue = this.value;

            if (checkInValue) {
                document.getElementById("checkOut").setAttribute("min", checkInValue);

                // reset check-out if invalid
                if (document.getElementById("checkOut").value < checkInValue) {
                    document.getElementById("checkOut").value = "";
                }
            }
        });
    });
    document.getElementById("findNow").addEventListener("click", function () {

        const cityId = document.getElementById("DestinationId")?.value;
        const checkIn = document.getElementById("checkIn")?.value;
        const checkOut = document.getElementById("checkOut")?.value;
        const tourType = document.getElementById("TourTypeId")?.value;
        const maxPerson = document.getElementById("maxPerson")?.value;

        let today = new Date();
        today.setHours(0, 0, 0, 0);

        let checkInDate = checkIn ? new Date(checkIn) : null;
        let checkOutDate = checkOut ? new Date(checkOut) : null;

        // ------------ VALIDATION ------------

        if (!cityId) return showToast("Please select a destination.", "error");
        if (checkIn) {
            if (!checkOut) return showToast("Please select check-out date.", "error");

            if (checkOutDate < checkInDate)
                return showToast("Check-out date cannot be earlier than check-in date.", "error");
        }
        if (checkOut) {
            if (!checkIn) return showToast("Please select check-In date.", "error");

         
        }

        // ------------ REDIRECT ------------

        // Clear form inputs before redirect
        document.getElementById("DestinationId").value = "";
        document.getElementById("checkIn").value = "";
        document.getElementById("checkOut").value = "";
        document.getElementById("TourTypeId").value = "";
        document.getElementById("maxPerson").value = "";


        const url = `/Tours/Index?DestinationId=${encodeURIComponent(cityId)}&checkInDate=${encodeURIComponent(checkIn)}&checkOutDate=${encodeURIComponent(checkOut)}&tourType=${encodeURIComponent(tourType)}&maxPerson=${encodeURIComponent(maxPerson)}`;

        window.location.href = url;
    });

</script>
