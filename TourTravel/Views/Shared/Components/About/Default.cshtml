@model TourTravel.Models.About
<div class="about-area pt-120 ">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <div class="about-left">
                    <div class="about-img">
                        <img src="~/assets/img/about/about.jpg" alt="">
                    </div>
                    <div class="about-left-content">
                        <h5>25+</h5>
                        <span>Years Of Experience</span>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="about-right">
                    <div class="site-header">
                        <span class="site-title-tagline">About Us</span>
                        <h2 class="site-title">@Model.Title</h2>
                    </div>
                    <p class="about-text">
                        @Model.Description
                    </p>
                    <div class="about-list-wrapper">
                        <ul class="about-list list-unstyled">
                            @if (!string.IsNullOrEmpty(Model.KeyFeatures))
                            {
                                var features = Model.KeyFeatures.Split(',', StringSplitOptions.RemoveEmptyEntries);
                                foreach (var feature in features)
                                {
                                    <li>
                                        <div class="icon"><span class="far fa-check-circle"></span></div>
                                        <div class="text">
                                            <p>@feature.Trim()</p>
                                        </div>
                                    </li>
                                }
                            }
                        </ul>
                    </div>                    <a asp-controller="Pages" asp-action="AboutUs" class="theme-btn">Discover More <i class="far fa-arrow-right"></i></a>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- about area end -->