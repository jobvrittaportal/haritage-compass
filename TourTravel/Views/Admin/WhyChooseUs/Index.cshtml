@model IEnumerable<TourTravel.Models.WhyChooseUs>
@{
    ViewData["Title"] = "Why Choose Us";
    Layout = "~/Admin/Views/Shared/_Layout-common.cshtml";
}

@if (TempData["success"] != null)
{
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            showToast("@TempData["success"]");
        });
    </script>
}

<div class="container mt-4">
    <div class="d-flex justify-content-between mb-3 align-items-center">
        <h3>Why Choose Us</h3>
        <a href="@Url.Action("Create", "WhyChooseUs")" class="btn btn-primary">
            <i class="fa-solid fa-plus me-1"></i> New
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-hover table-bordered align-middle">
            <thead class="">
                <tr>
                    <th style="width: 120px;">Image</th>
                    <th>Title</th>
                    <th>Description</th>
                    <th style="width: 130px;">Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (var item in Model)
                    {
                        <tr id="row_@item.Id">
                            <td class="text-center">
                                @if (!string.IsNullOrEmpty(item.ImageUrl))
                                {
                                    <img src="@item.ImageUrl" alt="Image" style="width:60px;height:60px;object-fit:contain;" />
                                }
                                else
                                {
                                    <span class="text-muted">No Image</span>
                                }
                            </td>
                            <td>@item.Title</td>
                            <td>@item.Description</td>

                            <td class="text-center">
                                <a href="@Url.Action("Edit", "WhyChooseUs", new { id = item.Id })"
                                   class="btn btn-sm btn-primary me-1" title="Edit">
                                    <i class="fa-solid fa-pen-to-square"></i>
                                </a>

                                <button type="button" class="btn btn-sm btn-danger btn-delete" data-id="@item.Id">
                                    <i class="fa fa-trash"></i>
                                </button>
                                <!-- ✅ Delete Modal -->
                                <div class="modal fade" id="deleteConfirmModal" tabindex="-1">
                                    <div class="modal-dialog modal-dialog-centered" style="max-width: 400px;">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title w-100 text-center">Confirm Delete</h5>
                                            </div>
                                            <div class="modal-body text-center">
                                                Are you sure you want to delete this item?
                                            </div>
                                            <div class="modal-footer d-flex justify-content-center">
                                                <button id="confirmDeleteBtn" class="btn btn-danger">Delete</button>
                                                <button class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                @Html.AntiForgeryToken()
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="4" class="text-center text-muted">No records found.</td>
                    </tr>
                }
            </tbody>
        </table>

        <!-- Pagination -->
        <nav>
            <ul class="pagination justify-content-center mt-3">
                @for (int i = 1; i <= ViewBag.TotalPages; i++)
                {
                    <li class="page-item @(i == ViewBag.Page ? "active" : "")">
                        <a class="page-link" href="?page=@i&search=@ViewBag.Search">@i</a>
                    </li>
                }
            </ul>
        </nav>
    </div>
</div>



@section Scripts {
    @Html.AntiForgeryToken()
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script>
        let deleteId = 0;

        $(".btn-delete").click(function () {
            deleteId = $(this).data("id");
            $("#deleteConfirmModal").modal("show");
        });

        $("#confirmDeleteBtn").off("click").on("click", function () {
            var token = $('input[name="__RequestVerificationToken"]').val();

            $.ajax({
                url: `/admin/WhyChooseUs/delete/${deleteId}`,
                type: "POST",
                headers: { "RequestVerificationToken": token },
                success: function (res) {
                    if (res.success) {
                        $("#deleteConfirmModal").modal("hide");
                        $("#row_" + deleteId).fadeOut();
                        showToast(res.message);
                         setTimeout(() => window.location.href = '/admin/WhyChooseUs', 3000);
                    } else {
                        showToast(res.message);
                    }
                },
                error: function () {
                    showToast("❌ Error deleting image");
                }
            });
        });
    </script>
}
