@model TourTravel.Models.IntroVideo
@{
    ViewData["Title"] = "Edit Intro Video";
    Layout = "~/Admin/Views/Shared/_Layout-common.cshtml";
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.5.13/cropper.min.css" rel="stylesheet" />
<script src="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.5.13/cropper.min.js"></script>

<div class="container mt-4">
    <div class="card shadow border-0">
        <div class="card-header text-black d-flex justify-content-between align-items-center">
            <h5 class="mb-0">
                <i class="fa-solid fa-pen-to-square me-2"></i>Edit Intro Video
            </h5>
            <a href="@Url.Action("Index", "IntroVideo")" class="btn btn-light btn-sm">
                <i class="fa-solid fa-arrow-left"></i> Back
            </a>
        </div>

        <div class="card-body">
            <form id="introVideoEditForm" asp-action="Edit" asp-route-id="@Model.Id" method="post" enctype="multipart/form-data" novalidate>
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Id" />

                <div class="row">
                    <div class="col-md-12 mb-3">
                        <label class="form-label fw-semibold">Title <span class="text-danger">*</span></label>
                        <input asp-for="Title" id="Title" class="form-control" required />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>

                    <div class="col-12 mb-3">
                        <label class="form-label fw-semibold">Description <span class="text-danger">*</span></label>
                        <textarea asp-for="Description" id="Description" class="form-control" rows="3" required></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="col-md-12 mb-3">
                        <label class="form-label fw-semibold">Video URL <span class="text-danger">*</span></label>
                        <input asp-for="VideoUrl" id="VideoUrl" class="form-control" placeholder="Enter YouTube or Vimeo URL" required />
                        <span asp-validation-for="VideoUrl" class="text-danger"></span>
                    </div>

                    <div class="col-6 mb-3">
                        <label class="form-label fw-semibold">Upload Image </label>
                        <input type="file" id="ImageFile" name="newImage" class="form-control" accept="image/*"  required/>
                        <small class="text-muted">Leave blank to keep current image.</small>
                        <span asp-validation-for="ImageUrl" class="text-danger"></span>
                    </div>
                </div>

                <div id="previewContainer" class="mb-3">
                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                    {
                        <img src="@Model.ImageUrl" style="max-width: 250px; max-height: 150px; object-fit: cover; border-radius: 8px; border: 1px solid #ccc; padding: 3px;" />
                    }
                </div>

                <div class="d-flex justify-content-end gap-2">
                    <button type="submit" class="btn btn-success">Update</button>
                    <button type="button" id="clearBtn" class="btn btn-secondary">Clear</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- ⭐ Cropper Modal -->
<div class="modal fade" id="cropperModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered cropper-modal-dialog" role="document">
        <div class="modal-content">

            <div class="modal-header">
                <h5 class="modal-title">Crop Image (1920×1280)</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body d-flex align-items-center justify-content-center"
                 style="height:640px; overflow:hidden; padding:10px;">
                <img id="cropImage"
                     style="max-width:100%; max-height:100%; display:block; background:#f3f3f3;" />
            </div>

            <div class="modal-footer">
                <button type="button" id="cropBtn" class="btn btn-primary">Crop & Save</button>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
            </div>

        </div>
    </div>
</div>

<style>
    .cropper-modal-dialog {
        max-width: 900px !important;
    }
</style>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.ckeditor.com/ckeditor5/40.2.0/classic/ckeditor.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.5.13/cropper.min.js"></script>

    <script>
        let editor;
        let cropper = null;
        let croppedBlob = null;

        ClassicEditor
            .create(document.querySelector('#Description'))
            .then(newEditor => editor = newEditor);

        // ⭐ FILE SELECT → OPEN CROP MODAL
               // ⭐ FILE SELECT → OPEN CROP MODAL
        $('#ImageFile').on('change', function (e) {

            const file = e.target.files[0];
            if (!file) return;

            // -----------------------------
            // ✅ FIXED VALIDATION (Your error was here)
            // -----------------------------
            const allowedTypes = ['image/png', 'image/jpeg', 'image/jpg'];
            const maxSize = 5 * 1024 * 1024; // 5MB

            if (!allowedTypes.includes(file.type)) {
                showToast('Only PNG, JPG, or JPEG images are allowed.', 'bg-danger');
                return;
            }

            if (file.size > maxSize) {
                showToast('Image size must be less than 5MB.', 'bg-danger');
                return;
            }
            // -----------------------------

            const reader = new FileReader();
            reader.onload = function (event) {

                $('#cropImage').attr('src', event.target.result);

                if (cropper) {
                    cropper.destroy();
                    cropper = null;
                }

                const modalEl = $('#cropperModal');
                const modal = new bootstrap.Modal(document.getElementById('cropperModal'));
                modal.show();

                modalEl.off('shown.bs.modal').on('shown.bs.modal', function () {
                    cropper = new Cropper(document.getElementById('cropImage'), {
                        aspectRatio: 1920 / 1280,
                        viewMode: 0,
                        autoCropArea: 1,
                        movable: true,
                        zoomable: true,
                        dragMode: 'move',
                        cropBoxResizable: false,
                        background: false
                    });
                });

                modalEl.off('hidden.bs.modal').on('hidden.bs.modal', function () {
                    if (cropper) {
                        cropper.destroy();
                        cropper = null;
                    }
                });
            };

            reader.readAsDataURL(file);
        });



        // ⭐ CROP BUTTON → PREVIEW + STORE BLOB
        $('#cropBtn').click(function () {
            if (!cropper) return;

            cropper.getCroppedCanvas({
                width: 1920,
                height: 1280
            }).toBlob(function (blob) {

                croppedBlob = blob;
                const previewUrl = URL.createObjectURL(blob);

                $('#previewContainer').html(`
                    <img src="${previewUrl}"
                         style="max-width:250px; max-height:150px; object-fit:cover;
                                border-radius:8px; border:1px solid #ccc; padding:3px;" />
                `);

                $('#cropperModal').modal('hide');
            });
        });


        // ⭐ CLEAR FORM (unchanged)
        $('#clearBtn').click(function () {
            $('#Title').val('');
            $('#Description').val('');
            $('#VideoUrl').val('');
            $('#ImageFile').val('');
            $('#previewContainer').html('');
            croppedBlob = null;
            showToast('Form cleared successfully.', 'bg-info');
        });


        // ⭐ SUBMIT WITH CROPPING SUPPORT
        $('#introVideoEditForm').on('submit', function (e) {
            e.preventDefault();

            const title = $('#Title').val().trim();
            const desc = $('#Description').val().trim();
            const videoUrl = $('#VideoUrl').val().trim();
            const file = $('#ImageFile')[0].files[0];

            if (!title || !desc || !videoUrl) {
                showToast('Please fill all required fields.', 'bg-danger');
                return;
            }

            // If new file selected → croppedBlob required
            if (file && !croppedBlob) {
                showToast('Please crop the selected image.', 'bg-danger');
                return;
            }

            const formData = new FormData($('#introVideoEditForm')[0]);

            if (croppedBlob) {
                formData.delete("newImage");
                formData.append("newImage", croppedBlob, "cropped-intro.jpg");
            }

            $.ajax({
                url: '@Url.Action("Edit", "IntroVideo", new { id = Model.Id })',
                type: 'POST',
                data: formData,
                processData: false,
                contentType: false,
                success: function (res) {
                    if (res.success) {
                        showToast(res.message, 'bg-success');
                        setTimeout(() => window.location.href = '/admin/IntroVideo', 2000);
                    } else {
                        showToast(res.message, 'bg-danger');
                    }
                },
                error: function () {
                    showToast('Something went wrong. Please try again.', 'bg-danger');
                }
            });
        });
    </script>
}
