@model IEnumerable<TourTravel.Models.TourCardsView>

@{
    bool showHeading = ViewData["ShowHeading"] as bool? ?? true;
    string columnClass = ViewData["ColumnClass"] as string ?? "col-md-6 col-lg-4"; // default 3 cards per row
}

<!-- tour area -->
<div class="tour-area py-120">
    <div class="container">
        <div class="row">
            @if (showHeading)
            {
                <div class="col-lg-6 mx-auto">
                    <div class="site-heading text-center">
                        <span class="site-title-tagline">Top Tour</span>
                        <h2 class="site-title">Top Tour Package</h2>
                        <p>
                            Explore our best tour packages across India — from Jaipur’s royal palaces to Kerala’s tranquil backwaters.
                            Discover destinations full of color, culture, and unforgettable experiences.
                        </p>
                    </div>
                </div>
            }
        </div>

        <div class="row align-items-center">
            @foreach (var tour in Model)
            {
                <div class="@columnClass">
                    <div class="tour-item">
                        <div class="tour-img">
                        <!-- Change this acc. to the need  -->
                            @if (tour.Price < 15000)
                            {
                                <span class="tour-sale">Sale</span>
                            }

                            <img src="@(tour.ImageUrl?.StartsWith("/") == true ? tour.ImageUrl : $"/assets/img/tour/{tour.ImageUrl}")" alt="@tour.Title">
                            <a href="#" class="tour-wish"><i class="far fa-heart"></i></a>
                        </div>

                        <div class="tour-meta">
                            <ul>
                                <li><i class="far fa-clock"></i> @tour.Duration</li>
                                <li><i class="far fa-user-friends"></i> @tour.MaxPerson Person</li>
                                <li><i class="far fa-map-marker-alt"></i> @tour.Location</li>
                            </ul>
                        </div>

                        <div class="tour-info">
                            <a href="#">
                                <h5>@tour.Title</h5>
                            </a>
                            <div class="tour-rating">
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                                <span>(@tour.ReviewsCount Reviews)</span>
                            </div>
                        </div>

                        <div class="tour-footer">
                            <div class="tour-price">
                                ₹@tour.Price.ToString("0") <small>/per person</small>
                            </div>
                            <a asp-controller="Tours" asp-action="TourPackageDetails" asp-route-id="@tour.Id" class="tour-btn">
                                Book Now <i class="far fa-arrow-right"></i>
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<!-- tour area end -->
