@model List<TourTravel.Controllers.PackagessDto>

@{
    bool showHeading = ViewData["ShowHeading"] as bool? ?? true;
    string columnClass = ViewData["ColumnClass"] as string ?? "col-md-6 col-lg-4";
}

<div class="tour-area py-120">
    <div class="container">
        <div class="row">
            @if (showHeading)
            {
                <div class="col-lg-6 mx-auto">
                    <div class="site-heading text-center">
                        <span class="site-title-tagline">Top Tour</span>
                        <h2 class="site-title">Top Tour Package</h2>
                        <p>
                            Explore our best tour packages across India — from Jaipur’s royal palaces to Kerala’s tranquil backwaters.
                        </p>
                    </div>
                </div>
            }
        </div>

        <div class="row align-items-center">
            @foreach (var tour in Model)
            {
                <div class="@columnClass">
                    <div class="tour-item">
                        <div class="tour-img">
                            @if (tour.BasePrice < 15000)
                            {
                                <span class="tour-sale">Sale</span>
                            }

                            <img src="@(tour.PackageImage)" alt="@tour.Name">
                            <a href="#" class="tour-wish"><i class="far fa-heart"></i></a>
                        </div>

                        <div class="tour-meta">
                            <ul>
                                <li><i class="far fa-clock"></i> @tour.Duration</li>
                                <li><i class="far fa-user-friends"></i> @tour.MaxPerson Person</li>
                                <li><i class="far fa-map-marker-alt"></i> @tour.CityName</li>
                            </ul>
                        </div>

                        <div class="tour-info">
                            <a asp-controller="Tours" asp-action="TourPackageDetails" asp-route-id="@tour.Id">
                                <h5>@tour.Name</h5>
                            </a>
                            <div class="tour-rating">
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                            </div>
                        </div>

                        <div class="tour-footer">
                            <div class="tour-price">
                                ₹@tour.BasePrice.ToString("0") <small>/per person</small>
                            </div>

                            <button type="button" class="tour-btn book-now-btn"
                                    data-package-id="@tour.Id"
                                    data-bs-toggle="modal" data-bs-target="#contactModal">
                                Book Now <i class="far fa-arrow-right"></i>
                            </button>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>


<!-- Contact Form Modal -->
<div class="modal fade" id="contactModal" tabindex="-1" aria-labelledby="contactModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content p-4">
            <div class="modal-header border-0">
                <h5 class="modal-title fw-semibold" id="contactModalLabel">
                    <i class="far fa-envelope me-2 text-warning"></i> Enquiry Form
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <div class="modal-body">
                <form method="post" action="" id="contact-form">

                    <div class="row g-3">
                        <div class="col-md-6">
                            <div class="form-group">
                                <input type="text" id="name" class="form-control" name="name" placeholder="Your Name" required>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <input type="email" id="email" class="form-control" name="email" placeholder="Your Email" required>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <input type="text" id="phoneNumber" class="form-control" name="PhoneNumber" placeholder="Your Phone Number" required>
                            </div>
                        </div>

                    </div>
                    <!-- Google reCAPTCHA -->
                    <div class="g-recaptcha mt-4 mb-3" data-sitekey="6LdyVAQsAAAAAOv8DkGgtnjpuDt0FEdNmPnsgz3F"></div>


                    <div class="text-end mt-4">
                        <button type="submit" class="btn btn-warning px-4">
                            Save
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<script src="https://www.google.com/recaptcha/api.js" async defer></script>

<script>
    let selectedPackageId = null;


    document.addEventListener("DOMContentLoaded", () => {
        const form = document.getElementById("contact-form");
        const bookNowButtons = document.querySelectorAll(".book-now-btn");

        // Capture clicked package
        bookNowButtons.forEach(btn => {
            btn.addEventListener("click", (e) => {
                selectedPackageId = e.currentTarget.getAttribute("data-package-id");
            });
        });

        form.addEventListener("submit", async (e) => {
            e.preventDefault();

            // Verify CAPTCHA first
            const captchaResponse = grecaptcha.getResponse();
            if (!captchaResponse) {
                alert(" Please verify that you're not a robot.");
                return;
            }

            const formData = {
                name: form.name.value.trim(),
                email: form.email.value.trim(),
                phoneNumber: form.PhoneNumber.value.trim(),
                captchaToken: captchaResponse
            };

            try {
                const response = await fetch("https://stg-jungleave-back.jobvritta.com/api/contact/addEnquiry", {
                    method: "POST",
                    headers: {
                        "Content-Type": "application/json",
                    },
                    body: JSON.stringify(formData)
                });

                const result = await response.json();

                if (response.ok) {
                    alert(" Enquiry sent successfully!");
                    form.reset();
                    grecaptcha.reset(); // reset CAPTCHA

                    const modal = bootstrap.Modal.getInstance(document.getElementById("contactModal"));
                    modal.hide();

                    if (selectedPackageId) {
                        window.location.href = `/Tours/TourPackageDetails/${selectedPackageId}`;
                    }

                } else {
                    alert(" " + (result.message || "Failed to send enquiry."));
                }
            } catch (error) {
                console.error("Error submitting enquiry:", error);
                alert(" Something went wrong. Please try again later.");
            }
        });
    });
</script>



