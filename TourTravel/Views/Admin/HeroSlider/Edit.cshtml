@model TourTravel.Models.HeroSlider
@{
    ViewData["Title"] = "Edit Hero Slider";
    Layout = "~/Admin/Views/Shared/_Layout-common.cshtml";
}

<div class="container mt-4">
    <div class="card shadow border-0">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0"><i class="fa fa-edit me-2"></i>Edit Hero Slider</h5>
            <a href="@Url.Action("Index", "HeroSlider")" class="btn btn-light btn-sm">
                <i class="fa-solid fa-arrow-left"></i> Back
            </a>
        </div>

        <div class="card-body">
            <form id="heroSliderEditForm" asp-action="Edit" asp-route-id="@Model.Id" method="post" enctype="multipart/form-data" novalidate>
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Id" />

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Title <span class="text-danger">*</span></label>
                        <input asp-for="Title" id="Title" class="form-control" required />
                    </div>

                    <div class="col-md-6 mb-3">
                        <label class="form-label">SubTitle <span class="text-danger">*</span></label>
                        <input asp-for="SubTitle" id="SubTitle" class="form-control" required />
                    </div>

                    <div class="col-md-12 mb-3">
                        <label class="form-label">Description <span class="text-danger">*</span></label>
                        <textarea asp-for="Description" id="Description" class="form-control"></textarea>
                    </div>

                    @* <div class="col-md-6 mb-3">
                        <label class="form-label">Rotation Time (seconds) <span class="text-danger">*</span></label>
                        <select asp-for="RotationTime" id="RotationTime" class="form-control" required>
                            <option value="">-- Select Rotation Time --</option>
                            <option value="1">1 second</option>
                            <option value="2">2 seconds</option>
                            <option value="3">3 seconds</option>
                        </select>
                        <span asp-validation-for="RotationTime" class="text-danger"></span>
                    </div> *@


                    <div class="col-md-6 mb-3">
                        <label class="form-label">Current Image</label><br />
                        @if (!string.IsNullOrEmpty(Model.Image))
                        {
                            <img src="@Model.Image" alt="Current Image" style="max-width: 200px; max-height: 150px; object-fit: cover;" class="rounded mb-2 border" />
                        }
                        <input type="file" id="ImageFile" name="ImageFile" class="form-control" accept="image/*" />
                    </div>
                </div>

                <div id="previewContainer" class="mb-3"></div>

                <div class="d-flex justify-content-end gap-2 mt-3">
                    <button type="submit" class="btn btn-success">Update</button>
                    <button type="button" id="clearFormBtn" class="btn btn-secondary">Clear</button>
                </div>

            </form>
        </div>
    </div>
</div>

<!-- Toast Container -->
<div class="position-fixed top-0 end-0 p-3" style="z-index: 99999;">
    <div id="toastContainer"></div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.ckeditor.com/ckeditor5/40.2.0/classic/ckeditor.js"></script>

    <script>
        let editor;
        ClassicEditor
            .create(document.querySelector('#Description'))
            .then(newEditor => { editor = newEditor; })
            .catch(console.error);

        // ✅ Image preview (new image)
        $('#ImageFile').on('change', function () {
            const file = this.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = e => {
                    $('#previewContainer').html(`<img src="${e.target.result}" style="max-width: 200px; max-height: 150px; object-fit: cover;" />`);
                };
                reader.readAsDataURL(file);
            } else {
                $('#previewContainer').empty();
            }
        });
                // ✅ Clear form function
        $('#clearFormBtn').click(function () {
            // Clear input fields
            $('#Title').val('');
            $('#SubTitle').val('');
            $('#ImageFile').val('');        
            if (editor) {
                editor.setData('');
            }

            $('#previewContainer').empty();

            // Reset validation messages
            $('.text-danger').text('');

            // Optional toast
            showToast('Form cleared successfully.', 'bg-info');
        });

        // ✅ AJAX Submit
        $('#heroSliderEditForm').submit(function (e) {
            e.preventDefault();

            $('#Description').val(editor.getData());

            const title = $('#Title').val().trim();
            const subtitle = $('#SubTitle').val().trim();
            const desc = $('#Description').val().trim();
            const rotation = $('#RotationTime').val().trim();

            if (!title || !subtitle || !desc ) {
                showToast('Please fill all required fields.', 'bg-danger');
                return;
            }
            
            const imageFile = $('#ImageFile')[0].files[0];
            if (imageFile) {
                const allowedTypes = ['image/png', 'image/jpeg', 'image/jpg'];
                const maxSize = 5 * 1024 * 1024;

                if (!allowedTypes.includes(imageFile.type)) {
                    showToast('Only PNG, JPG, or JPEG images are allowed.', 'bg-danger');
                    return;
                }

                if (imageFile.size > maxSize) {
                    showToast('Image size must be less than 5MB.', 'bg-danger');
                    return;
                }
            }

            // 🟨 Future use: enable dimension validation if needed
            /*
            const img = new Image();
            img.src = URL.createObjectURL(imageFile);
            img.onload = function () {
                if (img.width < 1200 || img.height < 600) {
                    showToast('Image dimensions should be at least 1200x600 pixels.', 'bg-warning');
                    return;
                }
                uploadHeroSlider();
            };
            img.onerror = function () {
                showToast('Invalid image file.', 'bg-danger');
            };
            return;
            */

            uploadHeroSlider();

            function uploadHeroSlider() {
                const formData = new FormData($('#heroSliderEditForm')[0]);
                $.ajax({
                    url: '@Url.Action("Edit", "HeroSlider", new { id = Model.Id })',
                    type: 'POST',
                    data: formData,
                    processData: false,
                    contentType: false,
                    success: function (response) {
                        if (response.success) {
                            showToast(response.message, 'bg-success');
                            setTimeout(() => window.location.href = '/admin/heroslider', 3000);
                        } else {
                            showToast(response.message || 'Something went wrong.', 'bg-danger');
                        }
                    },
                    error: function () {
                        showToast('Server error. Please try again.', 'bg-danger');
                    }
                });
            }
        });
    </script>
}
