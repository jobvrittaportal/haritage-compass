@model TourTravel.Models.FAQ
@{
    ViewData["Title"] = "Edit FAQ";
    Layout = "~/Admin/Views/Shared/_Layout-common.cshtml";
}

<div class="container mt-4">
    <div class="card shadow border-0">
        <div class="card-header text-dark d-flex justify-content-between align-items-center">
            <h5 class="mb-0"><i class="fa-solid fa-pen-to-square me-2"></i>Edit FAQ</h5>
            <a href="@Url.Action("Index", "FAQ")" class="btn btn-light btn-sm">
                <i class="fa-solid fa-arrow-left"></i> Back
            </a>
        </div>

        <div class="card-body">
            <form id="faqForm" asp-action="Edit" method="post" novalidate>
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Id" />

                <div class="mb-3">
                    <label class="form-label fw-semibold">Question</label>
                    <input asp-for="Question" class="form-control" placeholder="Enter question" required />
                    <span asp-validation-for="Question" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-semibold">Answer</label>
                    <textarea asp-for="Answer" id="Answer" class="form-control" rows="5" required></textarea>
                    <span asp-validation-for="Answer" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-success">
                    Update
                </button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <!-- CKEditor 5 -->
    <script src="https://cdn.ckeditor.com/ckeditor5/41.4.2/classic/ckeditor.js"></script>
    <script>
        ClassicEditor
            .create(document.querySelector('#Answer'))
            .catch(error => console.error(error));



        // ✅ Toast Function
        function showToast(message, type = 'bg-primary') {
            const toastId = 'toast' + Date.now();
            const toastHtml = `
                                        <div id="${toastId}" class="toast align-items-center text-white ${type} border-0 shadow-lg mb-2"
                                             role="alert" aria-live="assertive" aria-atomic="true">
                                            <div class="d-flex">
                                                <div class="toast-body fw-semibold">${message}</div>
                                                <button type="button" class="btn-close btn-close-white me-2 m-auto"
                                                        data-bs-dismiss="toast" aria-label="Close"></button>
                                            </div>
                                        </div>`;
            $('#toastContainer').prepend(toastHtml);

            const toastEl = document.getElementById(toastId);
            const bsToast = new bootstrap.Toast(toastEl, { delay: 3000 });
            bsToast.show();
            toastEl.addEventListener('hidden.bs.toast', () => toastEl.remove());
        }

        // ✅ Clear button
        $('#clearBtn').click(() => {
            $('#Question').val('');
            if (editor) editor.setData('');
            $('.text-danger').text('');
        });

        $('#faqForm').submit(function (e) {
            e.preventDefault();

            const question = $('#Question').val().trim();
            const answer = editor ? editor.getData().trim() : '';

            if (!question || !answer) {
                showToast('Please fill in both Question and Answer fields.', 'bg-danger');
                return;
            }

            $.ajax({
                url: '@Url.Action("Edit", "FAQ")',
                type: 'POST',
                data: $(this).serialize(),
                success: function (response) {
                    showToast('FAQ Updated successfully!', 'bg-success');
                    setTimeout(() => window.location.href = '/admin/faq', 1500);

                    $('#faqForm')[0].reset();
                    if (editor) editor.setData('');
                },
                error: function () {
                    showToast('Something went wrong!', 'bg-danger');
                }
            });
        });
    </script>
}
