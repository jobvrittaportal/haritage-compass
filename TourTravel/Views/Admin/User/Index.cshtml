@model List<TourTravel.Models.ApplicationUser>

@{
    ViewData["Title"] = "User Management";
    Layout = "~/Admin/Views/Shared/_Layout-common.cshtml";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between mb-3">
        <h3>User Management</h3>
        <button class="btn btn-primary" id="btnAddUser">
            <i class="fa fa-plus"></i> New
        </button>
    </div>

    <table class="table table-bordered table-hover" id="userTable">
        <thead>
            <tr>
                <th>S.No</th>
                <th>Name</th>
                <th>Email</th>
                <th>Employee Code</th>
                <th>Status</th>
                <th style="width:180px;">Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                var sno = 1;
                foreach (var user in Model)
                {
                    <tr data-id="@user.Id"
                        data-name="@user.Name"
                        data-email="@user.Email"
                        data-employeecode="@user.EmployeeCode"
                        data-active="@user.IsActive">

                        <td>@sno</td>
                        <td>@user.Name</td>
                        <td>@user.Email</td>
                        <td>@user.EmployeeCode</td>

                        <td>
                            @if (user.IsActive)
                            {
                                <span class="text-success">Active</span>
                            }
                            else
                            {
                                <span class="text-danger">Inactive</span>
                            }
                        </td>

                        <td>
                            <button class="btn btn-sm btn-primary me-1 btn-edit">
                                <i class="fa fa-edit"></i>
                            </button>
                            <button class="btn btn-sm btn-danger btn-delete">
                                <i class="fa fa-trash"></i>
                            </button>
                        </td>
                    </tr>
                    sno++;
                }
            }
            else
            {
                <tr>
                    <td colspan="6" class="text-center text-muted">No users found.</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<!-- Modal -->
<div class="modal fade" id="userModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <form id="userForm">
                <div class="modal-header">
                    <h5 class="modal-title" id="modalTitle">Add User</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>

                <div class="modal-body">
                    <input type="hidden" id="UserId" name="Id" />

                    <div class="mb-3">
                        <label class="form-label">Name</label>
                        <input type="text" class="form-control" id="Name" name="Name" required />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Email</label>
                        <input type="email" class="form-control" id="Email" name="Email" required />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Employee Code</label>
                        <input type="text" class="form-control" id="EmployeeCode" name="EmployeeCode" required />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Password</label>
                        <input type="text" class="form-control" id="Password" name="Password" />
                    </div>

                    <div class="form-check form-switch mb-3">
                        <input class="form-check-input" type="checkbox" id="IsActive" name="IsActive">
                        <label class="form-check-label" for="IsActive">Active</label>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="submit" class="btn btn-success" id="btnSave">Save</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(function () {

            // ADD button
            $('#btnAddUser').click(function () {
                $('#modalTitle').text('Add User');
                $('#userForm')[0].reset();
                $('#UserId').val('');
                $('#userModal').modal('show');
            });

            // EDIT button
            $('#userTable').on('click', '.btn-edit', function () {
                const row = $(this).closest('tr');

                $('#modalTitle').text('Edit User');

                $('#UserId').val(row.data('id'));
                $('#Name').val(row.data('name'));
                $('#Email').val(row.data('email'));
                $('#EmployeeCode').val(row.data('employeecode')); // âœ… FIXED
                $('#Password').val('');
                $('#IsActive').prop('checked', row.data('active') == true || row.data('active') === "True");

                $('#userModal').modal('show');
            });

            // SAVE (Add/Edit)
            $('#userForm').submit(function (e) {
                e.preventDefault();

                const data = {
                    Id: $('#UserId').val(),
                    Name: $('#Name').val(),
                    Email: $('#Email').val(),
                    EmployeeCode: $('#EmployeeCode').val(),
                    Password: $('#Password').val(),
                    IsActive: $('#IsActive').is(':checked')
                };

                const url = data.Id ? '/User/Edit' : '/User/Create';

                $.post(url, data, function (res) {
                    if (res.success) {
                        $('#userModal').modal('hide');
                        alert(res.message);
                        location.reload();
                    } else {
                        alert(res.message);
                    }
                });
            });

            // DELETE
            $('#userTable').on('click', '.btn-delete', function () {
                if (!confirm("Are you sure you want to delete?")) return;

                const id = $(this).closest('tr').data('id');

                $.post('/User/Delete', { id }, function (res) {
                    alert(res.message);
                    if (res.success) location.reload();
                });
            });

        });
    </script>
}
