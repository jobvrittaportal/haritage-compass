@model TourTravel.Models.Testimonial
@{
    ViewData["Title"] = "Add Testimonial";
    Layout = "~/Admin/Views/Shared/_Layout-common.cshtml";
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.5.13/cropper.min.css" rel="stylesheet" />
<script src="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.5.13/cropper.min.js"></script>

<div class="container mt-4">
    <div class="card shadow border-0">
        <div class="card-header text-black d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Add Testimonial</h5>
            <a href="@Url.Action("Index", "Testimonial")" class="btn btn-light btn-sm">
                <i class="fa-solid fa-arrow-left"></i> Back
            </a>
        </div>

        <div class="card-body">
            <form id="submit" asp-action="Edit" method="post" novalidate>
                @Html.AntiForgeryToken()

                <div class="mb-3">
                    <label class="form-label fw-semibold">Author Name</label><span class="text-danger">*</span>
                    <input asp-for="AuthorName" id="AuthorName" class="form-control" placeholder="Enter AuthorName" required />
                    <span asp-validation-for="AuthorName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-semibold">Role</label><span class="text-danger">*</span>
                    <input asp-for="Role" id="Role" class="form-control" rows="5" placeholder="Enter Role" required />
                    <span asp-validation-for="Role" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-semibold">Rating</label><span class="text-danger">*</span>
                    <select asp-for="Rating" id="Rating" class="form-control" required>
                        <option value="">-- Select Rating --</option>
                        <option value="1">1 - Very Poor</option>
                        <option value="2">2 - Poor</option>
                        <option value="3">3 - Average</option>
                        <option value="4">4 - Good</option>
                        <option value="5">5 - Excellent</option>
                    </select>
                    <span asp-validation-for="Rating" class="text-danger"></span>
                </div>
                      
                <div class="mb-3">
                    <label class="form-label fw-semibold">Quote <span class="text-danger">*</span></label>
                    <textarea asp-for="Quote" id="Quote" class="form-control" rows="5" placeholder="Enter Quote" required></textarea>

                    <small id="quoteCounter" class="text-muted">0 / 150 characters</small>
                    <span asp-validation-for="Quote" class="text-danger"></span>
                </div>

                @* <div class="mb-3">
                    <label class="form-label fw-semibold">Quote</label><span class="text-danger">*</span>
                    <textarea asp-for="Quote" id="Quote" class="form-control" rows="5" placeholder="Enter Quote" required></textarea>
                    <span asp-validation-for="Quote" class="text-danger"></span>
                </div> *@

                <!-- ⭐ IMAGE INPUT -->
                <div class="mb-3">
                    <label class="form-label fw-semibold">Upload Image (800×600) <span class="text-danger">*</span></label>
                    <input type="file" name="image" id="image" class="form-control" accept="image/*" required />
                </div>
                <div id="previewContainer" class="mb-3"></div>

                <div class="d-flex justify-content-end gap-2">
                    <button type="submit" class="btn btn-success">Save</button>
                    <button type="button" id="clearBtn" class="btn btn-secondary">Clear</button>
                </div>

            </form>
        </div>
    </div>
</div>

<!-- Toast -->
<div class="position-fixed top-0 end-0 p-3" style="z-index: 99999;">
    <div id="toastContainer"></div>
</div>

<!-- ⭐ Crop Modal -->
<div class="modal fade" id="cropperModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" style="max-width:850px;">
        <div class="modal-content">

            <div class="modal-header">
                <h5 class="modal-title">Crop Image (800×600)</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body" style="height:600px; display:flex; justify-content:center; align-items:center;">
                <img id="cropImage" style="max-width:100%; max-height:100%; display:block;" />
            </div>

            <div class="modal-footer">
                <button type="button" id="cropBtn" class="btn btn-primary">Crop & Save</button>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
            </div>

        </div>
    </div>
</div>

<style>
    #cropperModal .modal-body {
        height: 600px;
        display: flex;
        justify-content: center;
        align-items: center;
        overflow: hidden;
        padding: 10px;
    }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.ckeditor.com/ckeditor5/41.4.2/classic/ckeditor.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.5.13/cropper.min.js"></script>

    <script>
        let editor, cropper, croppedBlob;

        // ⭐ CKEditor WITH CHARACTER LIMIT (150)
        ClassicEditor.create(document.querySelector('#Quote'))
            .then(newEditor => {
                editor = newEditor;

              
                const initialText = editor.getData().replace(/<\/?[^>]+>/gi, "").trim();
                $("#quoteCounter").text(`${initialText.length} / 150 characters`);

                // Character limit + counter
                editor.model.document.on('change:data', () => {
                    const plainText = editor.getData().replace(/<\/?[^>]+>/gi, "").trim();
                    const length = plainText.length;

                    $("#quoteCounter").text(`${length} / 150 characters`);

                    if (length > 150) {
                        showToast("Quote must be 150 characters or less.", "bg-danger");

                       
                        const trimmed = plainText.substring(0, 150);
                        editor.setData(trimmed);

                        $("#quoteCounter").text(`150 / 150 characters`);
                    }
                });
            })
            .catch(error => console.error(error));


        // ⭐ OPEN CROP MODAL (REFERENCE CODE APPLIED)
        $('#image').on('change', function (e) {
            const file = e.target.files[0];
            if (!file) return;

            const allowedTypes = ['image/png', 'image/jpeg', 'image/jpg'];
            if (!allowedTypes.includes(file.type)) {
                showToast('Only PNG, JPG, or JPEG images allowed.', 'bg-danger');
                return;
            }

            if (file.size > 5 * 1024 * 1024) {
                showToast('Image size must be less than 5MB.', 'bg-danger');
                return;
            }

            const reader = new FileReader();
            reader.onload = function (event) {

                if (cropper) {
                    cropper.destroy();
                    cropper = null;
                }

                $('#cropImage').attr('src', event.target.result);

                const modalEl = $('#cropperModal');
                const modal = new bootstrap.Modal(document.getElementById('cropperModal'));
                modal.show();

                // Clear duplicate bindings (REFERENCE STYLE)
                modalEl.off('shown.bs.modal');
                modalEl.off('hidden.bs.modal');

                modalEl.on('shown.bs.modal', function () {
                    cropper = new Cropper(document.getElementById('cropImage'), {
                        aspectRatio: 4 / 3,
                        viewMode: 0,
                        autoCropArea: 1,
                        responsive: true,
                        zoomable: true,
                        scalable: false,
                        movable: true,
                        cropBoxMovable: true,
                        cropBoxResizable: false,
                        dragMode: 'move',
                        background: false,
                        guides: false,
                        center: true
                    });
                });

                modalEl.on('hidden.bs.modal', function () {
                    if (cropper) {
                        cropper.destroy();
                        cropper = null;
                    }
                    if (!croppedBlob) {
                     $('#image').val("");     // remove new file
                    }
                });

            };

            reader.readAsDataURL(file);
        });



        // ⭐ CROP BUTTON (REFERENCE STYLE)
        $('#cropBtn').click(function () {
            if (!cropper) return;

            cropper.getCroppedCanvas({
                width: 800,
                height: 600
            }).toBlob(function (blob) {

                croppedBlob = blob;

                const previewUrl = URL.createObjectURL(blob);

                $('#previewContainer').html(
                    `<img src="${previewUrl}" style="max-width:200px; border-radius:10px; border:1px solid #ddd;" />`
                );

                $('#cropperModal').modal('hide');
            });
        });



        // ⭐ CLEAR FORM
        $('#clearBtn').click(() => {
            $('#AuthorName').val('');
            $('#Role').val('');
            $('#Rating').val('');
            if (editor) editor.setData('');
            $('#previewContainer').html('');
            croppedBlob = null;
            showToast('Form cleared successfully.', 'bg-info');
        });



        // ⭐ SUBMIT FORM (unchanged)
        $('#submit').submit(function (e) {
            e.preventDefault();

            const AuthorName = $('#AuthorName').val().trim();
            const Role = $('#Role').val().trim();
            const Rating = $('#Rating').val().trim();
            const quote = editor ? editor.getData().trim() : '';

            if (!AuthorName || !Role || !Rating || !quote) {
                showToast('Please fill all required fields.', 'bg-danger');
                return;
            }

            if (Rating > 5 || Rating < 1) {
                showToast('Rating must be between 1 and 5', 'bg-danger');
                return;
            }

            const originalFile = $('#image')[0].files[0];

            if (!originalFile) {
                showToast('Please upload an image.', 'bg-danger');
                return;
            }

            if (!croppedBlob) {
                showToast('Please crop the image before submitting.', 'bg-danger');
                return;
            }

            submitForm(quote);
        });



        // ⭐ FINAL SUBMIT FUNCTION (unchanged)
        function submitForm(quote) {
            const formData = new FormData($('#submit')[0]);

            formData.delete("image");
            formData.append("image", croppedBlob, "cropped-image.jpg");
            formData.set('quote', quote);

            $.ajax({
                url: '/admin/Testimonial/Create',
                type: 'POST',
                data: formData,
                processData: false,
                contentType: false,
                success: function (res) {
                    if (res.success) {
                        showToast(res.message, 'bg-success');
                        setTimeout(() => window.location.href = '/admin/Testimonial', 3000);
                    } else {
                        showToast(res.message, 'bg-danger');
                    }
                },
                error: function () {
                    showToast('An error occurred while saving.', 'bg-danger');
                }
            });
        }

    </script>
}

