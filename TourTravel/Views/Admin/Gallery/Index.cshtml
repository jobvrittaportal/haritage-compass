@model IEnumerable<TourTravel.Models.Gallery>
@{
    ViewData["Title"] = "Gallery";
    Layout = "~/Admin/Views/Shared/_Layout-common.cshtml";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between mb-3 align-items-center">
        <h3>Gallery</h3>
        <a href="@Url.Action("Create", "Gallery")" class="btn btn-success">
            <i class="fa-solid fa-plus me-1"></i> Add New
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-hover table-bordered align-middle">
            <thead class="table-dark">
                <tr>
                    <th>Image</th>
                    <th style="width: 130px;">Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (var item in Model)
                    {
                        <tr>


                            <td>
                                @if (!string.IsNullOrEmpty(item.ImageUrl))
                                {
                                    <img src="@item.ImageUrl" alt="Image" style="width:100px;height:60px;object-fit:cover;" />
                                }
                                else
                                {
                                    <span class="text-muted">No image</span>
                                }
                            </td>
                            <td class="text-center">
                                <!-- Edit Button -->

                                <a href="@Url.Action("Edit", "Gallery", new { id = item.Id })"
                                   class="btn btn-icon btn-sm btn-warning me-1"
                                   title="Edit">
                                    <i class="fa-solid fa-pen-to-square"></i>
                                </a>


                                <!-- Delete Button -->
                                <form asp-action="Delete" asp-route-id="@item.Id" method="post"
                                      class="d-inline-block" onsubmit="return confirm('Are you sure?');">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-icon btn-sm btn-danger" title="Delete">
                                        <i class="fa-solid fa-trash"></i>
                                    </button>
                                </form>
                            </td>

                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="3" class="text-center text-muted">No Image found.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
@section Scripts {
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>
    <!-- âœ… CKEditor 5 -->
    <script src="https://cdn.ckeditor.com/ckeditor5/41.4.2/classic/ckeditor.js"></script>

    <script>

        $('[data-bs-toggle="tooltip"]').tooltip();

    </script>
}

