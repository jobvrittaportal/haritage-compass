@using System.Text.RegularExpressions

@model IEnumerable<TourTravel.Models.TermsOfService>
@{
    ViewData["Title"] = "Terms Of Service";
    Layout = "~/Admin/Views/Shared/_Layout-common.cshtml";
}

<div class="container mt-4">


    <div class="d-flex justify-content-between align-items-center mb-3">
        <!-- Left side -->
        <h4 class="mb-0">Terms Of Service</h4>

        <!-- Right side (search + New button) -->
        <div class="d-flex align-items-center">
            <form method="get" asp-action="Index" class="me-2">
                <div class="input-group" style="width: 170px;">
                    <input type="text" name="search" value="@ViewBag.Search"
                           class="form-control" placeholder="Search" />
                    <button class="btn btn-outline-secondary" type="submit">
                        <i class="fa fa-search"></i>
                    </button>
                </div>
            </form>
            <a href="@Url.Action("Create", "TermsOfService")" class="btn btn-primary">
                <i class="fa fa-plus"></i> New
            </a>
        </div>
    </div>


    <div class="table-responsive">
        <table class="table table-hover table-bordered align-middle">
            <thead class="">
                <tr>
                    <th>Title</th>
                    <th>Description</th>
                    <th style="width: 130px;">Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (var item in Model)
                    {
                        <tr id="termsOfServicRow_@item.Id">
                            <td>@item.Title</td>
                            <td data-bs-toggle="tooltip" data-bs-placement="top"
                                title="@Regex.Replace(item.Description ?? "", "<.*?>", string.Empty)">
                                @{
                                    var plainText = Regex.Replace(item.Description ?? "", "<.*?>", string.Empty);
                                }
                                @(plainText.Length > 50 ? plainText.Substring(0, 50) + "..." : plainText)
                            </td>

                            <td class="text-center">
                                <!-- Edit Button -->

                                <a href="@Url.Action("Edit", "TermsOfService", new { id = item.Id })"
                                   class="btn btn-icon btn-sm btn-primary me-1"
                                   title="Edit">
                                    <i class="fa-solid fa-pen-to-square"></i>
                                </a>
                                <button type="button" class="btn btn-sm btn-danger btn-delete" data-id="@item.Id">
                                    <i class="fa fa-trash"></i>
                                </button>
                                <!-- Delete Confirmation Modal -->
                                <div class="modal fade" id="deleteConfirmModal" tabindex="-1">
                                    <div class="modal-dialog modal-dialog-centered">
                                        <div class="modal-content">
                                            <div class="modal-header bg-warning">
                                                <h5 class="modal-title">Confirm Delete</h5>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                            </div>
                                            <div class="modal-body">Are you sure you want to delete?</div>
                                            <div class="modal-footer">
                                                <button class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                                <button id="confirmDeleteBtn" class="btn btn-danger">Delete</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                @Html.AntiForgeryToken()

                                @* <!-- Delete Button -->
                                <form asp-action="Delete" asp-route-id="@item.Id" method="post"
                                      class="d-inline-block" onsubmit="return confirm('Are you sure?');">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-icon btn-sm btn-danger" title="Delete">
                                        <i class="fa-solid fa-trash"></i>
                                    </button>
                                </form> *@
                            </td>

                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="3" class="text-center text-muted">No Term and service found.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>

    <script>
        $(function () {
            // Initialize Bootstrap tooltips
            $('[data-bs-toggle="tooltip"]').tooltip();
        });

    </script>
    <script>
        let deleteId = 0;

        $(".btn-delete").click(function () {
            deleteId = $(this).data("id");
            $("#deleteConfirmModal").modal("show");
        });

        $("#confirmDeleteBtn").off("click").on("click", function () {
            var token = $('input[name="__RequestVerificationToken"]').val();

            $.ajax({
                url: `/admin/TermsOfService/Delete/${deleteId}`,
                type: "POST",
                headers: { "RequestVerificationToken": token },
                success: function (res) {
                    if (res.success) {
                        $("#termsOfServicRow_" + deleteId).fadeOut();
                        showToast(res.message);
                    } else {
                        showToast(res.message, "error");
                    }
                },
                error: function () {
                    showToast("? Server error", "error");
                }
            });

            $("#deleteConfirmModal").modal("hide");
        });
    </script>
}
