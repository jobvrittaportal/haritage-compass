@model IEnumerable<TourTravel.Models.HeroSlider>
@{
    ViewData["Title"] = "Hero Sliders";
    Layout = "~/Admin/Views/Shared/_Layout-common.cshtml";
}

@if (TempData["success"] != null)
{
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            showToast("@TempData["success"]");
        });
    </script>
}
<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h4 class="mb-0">Hero Sliders</h4>
        <div class="d-flex align-items-center">
            <form method="get" asp-action="Index" class="me-2">
                <div class="input-group" style="width: 200px;">
                    <input type="text" name="search" value="@ViewBag.Search" class="form-control" placeholder="Search title/subtitle" />
                    <button class="btn btn-outline-secondary"><i class="fa fa-search"></i></button>
                </div>
            </form>
            <a href="@Url.Action("Create", "HeroSlider")" class="btn btn-primary ms-2"><i class="fa fa-plus"></i> New</a>
        </div>
    </div>

    <table class="table table-striped align-middle">
        <thead>
            <tr>
                <th>Title</th>
                <th>SubTitle</th>
                <th>Description</th>
                <th>Image</th>
                <th>Rotation Time</th>
                <th class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
             @if (Model != null && Model.Any())
            {
            @foreach (var item in Model)
            {
                <tr id="sliderRow_@item.Id">
                    <td>@item.Title</td>
                    <td>@item.SubTitle</td>
                    <td>@Html.Raw(item.Description)</td>
                    <td>
                        @if (!string.IsNullOrEmpty(item.Image))
                        {
                            <img src="@item.Image" alt="Slider" width="100" />
                        }
                    </td>
                    <td>@item.RotationTime sec</td>
                    <td class="text-center" style="white-space:nowrap;">
                        <a href="@Url.Action("Edit", "HeroSlider", new { id = item.Id })"
                           class="btn btn-sm btn-primary me-1">
                            <i class="fa fa-edit"></i>
                        </a>

                        <button class="btn btn-sm btn-danger btn-delete" data-id="@item.Id">
                            <i class="fa fa-trash"></i>
                        </button>
                        <!-- Delete Confirmation Modal (Only ONE modal on page) -->
                        <div class="modal fade" id="deleteConfirmModal" tabindex="-1">
                            <div class="modal-dialog modal-dialog-centered">
                                <div class="modal-content">
                                    <div class="modal-header bg-warning">
                                        <h5 class="modal-title">Confirm Delete</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                    </div>
                                    <div class="modal-body">Are you sure you want to delete this slider?</div>
                                    <div class="modal-footer">
                                        <button class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                        <button id="confirmDeleteBtn" class="btn btn-danger">Delete</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        @Html.AntiForgeryToken()
                    </td>
                </tr>
            }
          }
        </tbody>
    </table>

    <nav>
        <ul class="pagination justify-content-center mt-3">
            @for (int i = 1; i <= ViewBag.TotalPages; i++)
            {
                <li class="page-item @(i == ViewBag.Page ? "active" : "")">
                    <a class="page-link" href="?page=@i&search=@ViewBag.Search">@i</a>
                </li>
            }
        </ul>
    </nav>
</div>

@section Scripts {
    <script>
         let deleteId = 0;

        $(".btn-delete").click(function () {
            deleteId = $(this).data("id");
            $("#deleteConfirmModal").modal("show");
        });

        $("#confirmDeleteBtn").off("click").on("click", function () {
            var token = $('input[name="__RequestVerificationToken"]').val();

            $.ajax({
                url: `/admin/HeroSlider/delete/${deleteId}`,
                type: "POST",
                headers: { "RequestVerificationToken": token },
                success: function (res) {
                    if (res.success) {
                        $("#deleteConfirmModal").modal("hide");
                        $("#sliderRow_" + deleteId).fadeOut();
                        showToast(res.message);
                         setTimeout(() => {
                        window.location.href = '/admin/HeroSlider';
                    }, 1500);
                    } else {
                        showToast(res.message);
                    }
                },
                error: function () {
                    showToast("❌ Error deleting slider");
                }
            });
        });

    </script>
}
