@model TourTravel.Models.About

@{
    ViewData["Title"] = "Add About";
    Layout = "~/Admin/Views/Shared/_Layout-common.cshtml";
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.5.13/cropper.min.css" rel="stylesheet" />
<script src="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.5.13/cropper.min.js"></script>

<div class="container mt-4">
    <div class="card shadow border-0">
        <div class="card-header text-black d-flex justify-content-between align-items-center">
            <h5 class="mb-0"><i class="fa-solid fa-circle-info me-2"></i>Add About</h5>
            <a href="@Url.Action("Index", "About")" class="btn btn-light btn-sm">
                <i class="fa-solid fa-arrow-left"></i> Back
            </a>
        </div>

        <div class="card-body">
            <form id="aboutForm" enctype="multipart/form-data" method="post" asp-action="Create" novalidate>
                @Html.AntiForgeryToken()

                <div class="mb-3">
                    <label class="form-label fw-semibold">Title <span class="text-danger">*</span></label>
                    <input asp-for="Title" class="form-control" id="Title" placeholder="Enter title" required />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-semibold">Key Features <span class="text-danger">*</span></label>
                    <textarea asp-for="KeyFeatures" id="KeyFeatures" class="form-control" rows="4" placeholder="Enter key features" required></textarea>
                    <span asp-validation-for="KeyFeatures" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-semibold">Description <span class="text-danger">*</span></label>
                    <textarea asp-for="Description" id="Description" class="form-control" rows="6" placeholder="Enter detailed description" required></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-semibold">Meta Title <span class="text-danger">*</span></label>
                    <input asp-for="MetaTitle" class="form-control" id="MetaTitle" placeholder="Enter meta title" required />
                    <span asp-validation-for="MetaTitle" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-semibold">Meta Description <span class="text-danger">*</span></label>
                    <textarea asp-for="MetaDescription" id="MetaDescription" class="form-control" rows="3" placeholder="Enter meta description" required></textarea>
                    <span asp-validation-for="MetaDescription" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-semibold">Slug URL <span class="text-danger">*</span></label>
                    <input asp-for="SlugUrl" class="form-control" id="SlugUrl" placeholder="Enter slug (unique)" required />
                    <span asp-validation-for="SlugUrl" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-semibold">Upload Image (600×600) <span class="text-danger">*</span></label>
                    <input type="file" name="image" id="image" class="form-control" accept="image/*" required />
                </div>

                <div id="previewContainer" class="mb-3"></div>

                <div class="d-flex justify-content-end gap-2">
                    <button type="submit" class="btn btn-success">Save</button>
                    <button type="button" id="clearBtn" class="btn btn-secondary">Clear</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- ⭐ Cropper Modal -->
<div class="modal fade" id="cropperModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered" style="max-width:850px;">
        <div class="modal-content">

            <div class="modal-header">
                <h5 class="modal-title">Crop Image (600×600)</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body d-flex justify-content-center align-items-center"
                 style="height:600px; overflow:hidden;">
                <img id="cropImage" style="max-width:100%; max-height:100%; display:block;" />
            </div>

            <div class="modal-footer">
                <button type="button" id="cropBtn" class="btn btn-primary">Crop & Save</button>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
            </div>

        </div>
    </div>
</div>


<!-- Toast Container -->
<div class="position-fixed top-0 end-0 p-3" style="z-index:99999;">
    <div id="toastContainer"></div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.ckeditor.com/ckeditor5/41.4.2/classic/ckeditor.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.5.13/cropper.min.js"></script>

    <script>
        let editor;
        let cropper = null;
        let croppedBlob = null;

        ClassicEditor.create(document.querySelector('#Description'))
            .then(newEditor => editor = newEditor);

        // ⭐ OPEN CROP MODAL
        $('#image').on('change', function () {
            const file = this.files[0];
            if (!file) return;

            const reader = new FileReader();
            reader.onload = function (e) {

                $('#cropImage').attr('src', e.target.result);

                if (cropper) { cropper.destroy(); cropper = null; }

                const modalEl = $('#cropperModal');
                const modal = new bootstrap.Modal(document.getElementById('cropperModal'));
                modal.show();

                modalEl.off('shown.bs.modal').on('shown.bs.modal', function () {
                    cropper = new Cropper(document.getElementById('cropImage'), {
                        aspectRatio: 1,
                        viewMode: 0,
                        autoCropArea: 1,
                        movable: true,
                        zoomable: true,
                        dragMode: 'move',
                        cropBoxResizable: false
                    });
                });

                modalEl.off('hidden.bs.modal').on('hidden.bs.modal', function () {
                    if (cropper) { cropper.destroy(); cropper = null; }
                });
            };

            reader.readAsDataURL(file);
        });

        // ⭐ CROP BUTTON
        $('#cropBtn').click(function () {
            if (!cropper) return;

            cropper.getCroppedCanvas({
                width: 600,
                height: 600
            }).toBlob(function (blob) {

                croppedBlob = blob;
                const url = URL.createObjectURL(blob);

                $('#previewContainer').html(`
                    <img src="${url}" style="max-width:200px; border-radius:8px; border:1px solid #ccc;" />
                `);

                $('#cropperModal').modal('hide');
            });
        });

        // ⭐ Clear Form
        $('#clearBtn').click(() => {
            $('#aboutForm')[0].reset();
            if (editor) editor.setData('');
            $('#previewContainer').html('');
            croppedBlob = null;
        });

        // ⭐ Submit Form (NO CHANGES except cropper support)
        $('#aboutForm').submit(function (e) {
            e.preventDefault();

            const title = $('#Title').val().trim();
            const keyFeatures = $('#KeyFeatures').val().trim();
            const metaTitle = $('#MetaTitle').val().trim();
            const metaDescription = $('#MetaDescription').val().trim();
            const slug = $('#SlugUrl').val().trim();
            const description = editor ? editor.getData().trim() : '';
            const file = $('#image')[0].files[0];

            if (!title || !keyFeatures || !metaTitle || !metaDescription || !slug || !description) {
                showToast('Please fill all required fields.', 'bg-danger');
                return;
            }

            if (file && !croppedBlob) {
                showToast('Please crop the selected image.', 'bg-danger');
                return;
            }

            const formData = new FormData($('#aboutForm')[0]);
            formData.set('Description', description);

            if (croppedBlob) {
                formData.delete("image");
                formData.append("image", croppedBlob, "about-600.jpg");
            }

            $.ajax({
                url: '/admin/About/Create',
                type: 'POST',
                data: formData,
                processData: false,
                contentType: false,
                success: function (res) {
                    if (res.success) {
                        showToast(res.message, 'bg-success');
                        setTimeout(() => window.location.href = '/admin/About', 3000);
                    } else {
                        showToast(res.message, 'bg-danger');
                    }
                },
                error: function () {
                    showToast('An error occurred while saving.', 'bg-danger');
                }
            });
        });

    </script>
}
