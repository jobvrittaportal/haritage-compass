@model TourTravel.Models.Gallery
@{
    ViewData["Title"] = "Add Image";
    Layout = "~/Admin/Views/Shared/_Layout-common.cshtml";
}

<div class="container mt-4">
    <div class="card shadow border-0">
        <div class="card-header text-black d-flex justify-content-between align-items-center">
            <h5 class="mb-0"><i class="fa-solid fa-image me-2"></i>Add Image</h5>
            <a href="@Url.Action("Index", "Gallery")" class="btn btn-light btn-sm">
                <i class="fa-solid fa-arrow-left"></i> Back
            </a>
        </div>

        <div class="card-body">
            <form id="galleryForm" asp-action="Create" method="post" enctype="multipart/form-data" novalidate>
                @Html.AntiForgeryToken()
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Title <span class="text-danger">*</span></label>
                        <input asp-for="Title" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-semibold">Image <span class="text-danger">*</span></label>
                        <input type="file" id="ImageFile" name="imageUrl" class="form-control" accept="image/*" required />
                        <span asp-validation-for="ImageUrl" class="text-danger"></span>
                    </div>
                </div>
                <div id="previewContainer" class="mb-3"></div>

               
                <div class="d-flex justify-content-end gap-2">
                    <button type="submit" class="btn btn-success">Save</button>
                    <button type="button" id="clearBtn" class="btn btn-secondary">Clear</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Toast -->
<div class="position-fixed top-0 end-0 p-3" style="z-index: 99999;">
    <div id="toastContainer"></div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        // Preview Image
        $('#ImageFile').on('change', function () {
            const file = this.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function (e) {
                    $('#previewContainer').html(`<img src="${e.target.result}" style="max-width: 200px; max-height: 150px; object-fit: cover;" />`);
                };
                reader.readAsDataURL(file);
            }
        });

        // Toast Function
  
        // Clear Form
        $('#clearBtn').click(function () {
            $('#ImageFile').val('');
            $('#previewContainer').empty();
            showToast('Form cleared successfully.', 'bg-info');
        });

        // Form Validation
               // Form Validation
              $('#galleryForm').submit(function (e) {
            e.preventDefault();

            const title = $('#Title').val().trim();
            const imageFile = $('#ImageFile')[0].files[0];

            // Basic validation
            if (!title || !imageFile) {
                showToast('Please fill all required fields.', 'bg-danger');
                return;
            }

            // Validate file type and size
            const allowedTypes = ['image/png', 'image/jpeg', 'image/jpg'];
            const maxSize = 5 * 1024 * 1024; // 5MB

            if (!allowedTypes.includes(imageFile.type)) {
                showToast('Only PNG, JPG, or JPEG images are allowed.', 'bg-danger');
                return;
            }

            if (imageFile.size > maxSize) {
                showToast('Image size must be less than 5MB.', 'bg-danger');
                return;
            }

            // Validate image dimensions
            const img = new Image();
            img.src = URL.createObjectURL(imageFile);

            img.onload = function () {
                if (img.width !== 420 || img.height !== 420) {
                    showToast('Image dimensions must be exactly 420x420 pixels.', 'bg-danger');
                    return;
                }

                // ? If everything is valid, submit form via AJAX
                const formData = new FormData($('#galleryForm')[0]);

                $.ajax({
                    url: '@Url.Action("Create", "Gallery")',
                    type: 'POST',
                    data: formData,
                    processData: false,
                    contentType: false,
                    success: function () {
                        showToast('Image added successfully!', 'bg-success');
                        setTimeout(() => window.location.href = '/admin/gallery', 1500);
                    },
                    error: function () {
                        showToast('Something went wrong. Please try again.', 'bg-danger');
                    }
                });
            };

            img.onerror = function () {
                showToast('Invalid image file.', 'bg-danger');
            };
        });

    </script>
}
