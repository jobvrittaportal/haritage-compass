@model TourTravel.Models.Gallery
@{
    ViewData["Title"] = "Add Image";
    Layout = "~/Admin/Views/Shared/_Layout-common.cshtml";
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.5.13/cropper.min.css" rel="stylesheet" />
<script src="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.5.13/cropper.min.js"></script>

<div class="container mt-4">
    <div class="card shadow border-0">
        <div class="card-header text-black d-flex justify-content-between align-items-center">
            <h5 class="mb-0"><i class="fa-solid fa-image me-2"></i>Add Image</h5>
            <a href="@Url.Action("Index", "Gallery")" class="btn btn-light btn-sm">
                <i class="fa-solid fa-arrow-left"></i> Back
            </a>
        </div>

        <div class="card-body">
            <form id="galleryForm" asp-action="Create" method="post" enctype="multipart/form-data" novalidate>
                @Html.AntiForgeryToken()
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Title <span class="text-danger">*</span></label>
                        <input asp-for="Title" class="form-control" required />
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-semibold">Upload Image (420x420) <span class="text-danger">*</span></label>
                        <input type="file" id="ImageFile" name="imageUrl" class="form-control" accept="image/*" required />
                        <span asp-validation-for="ImageUrl" class="text-danger"></span>
                    </div>
                </div>

                <div id="previewContainer" class="mb-3"></div>

                <div class="d-flex justify-content-end gap-2">
                    <button type="submit" class="btn btn-success">Save</button>
                    <button type="button" id="clearBtn" class="btn btn-secondary">Clear</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Toast -->
<div class="position-fixed top-0 end-0 p-3" style="z-index: 99999;">
    <div id="toastContainer"></div>
</div>

<!-- Crop Modal -->
<div class="modal fade" id="cropperModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" style="max-width:850px;">
        <div class="modal-content">

            <div class="modal-header">
                <h5 class="modal-title">Crop Image (420x420)</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body" style="height:600px; display:flex; justify-content:center; align-items:center;">
                <img id="cropImage" style="max-width:100%; max-height:100%; display:block;" />
            </div>

            <div class="modal-footer">
                <button type="button" id="cropBtn" class="btn btn-primary">Crop & Save</button>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
            </div>

        </div>
    </div>
</div>

<style>
    #cropperModal .modal-body {
        height: 600px;
        display: flex;
        justify-content: center;
        align-items: center;
        overflow: hidden;
        padding: 10px;
    }

    #cropImage {
        max-width: 100%;
        max-height: 100%;
        display: block;
        background: #f3f3f3;
    }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.5.13/cropper.min.js"></script>

    <script>
        let cropper, croppedBlob;

        // OPEN CROP MODAL
        $('#ImageFile').on('change', function (e) {
            const file = e.target.files[0];
            if (!file) return;

            const allowed = ['image/png', 'image/jpeg', 'image/jpg'];
            if (!allowed.includes(file.type)) {
                showToast('Only PNG, JPG, JPEG allowed.', 'bg-danger');
                return;
            }

            const reader = new FileReader();
            reader.onload = function (event) {

                // Destroy previous cropper
                if (cropper) {
                    cropper.destroy();
                    cropper = null;
                }

                $('#cropImage').attr('src', event.target.result);

                const modalEl = $('#cropperModal');
                const modal = new bootstrap.Modal(document.getElementById('cropperModal'));
                modal.show();

                // clear duplicate events
                modalEl.off('shown.bs.modal');
                modalEl.off('hidden.bs.modal');

                // Initialize Cropper EXACTLY like reference code
                modalEl.on('shown.bs.modal', function () {
                    cropper = new Cropper(document.getElementById('cropImage'), {
                        aspectRatio: 1,        // 420x420 = square
                        viewMode: 0,
                        autoCropArea: 1,
                        responsive: true,
                        zoomable: true,
                        scalable: false,
                        movable: true,
                        cropBoxMovable: true,
                        cropBoxResizable: false,
                        dragMode: 'move',
                        background: false,
                        guides: false,
                        center: true
                    });
                });

                // destroy on close
                modalEl.on('hidden.bs.modal', function () {
                    if (cropper) {
                        cropper.destroy();
                        cropper = null;
                    }
                });

            };

            reader.readAsDataURL(file);
        });

        // CROP BUTTON
        $('#cropBtn').click(function () {
            if (!cropper) return;

            cropper.getCroppedCanvas({
                width: 420,
                height: 420
            }).toBlob(function (blob) {
                croppedBlob = blob;

                const previewUrl = URL.createObjectURL(blob);

                $('#previewContainer').html(
                    `<img src="${previewUrl}" style="max-width:200px; border-radius:10px; border:1px solid #ddd;" />`
                );

                $('#cropperModal').modal('hide');
            });
        });

        // CLEAR FORM
        $('#clearBtn').click(function () {
            $('#galleryForm')[0].reset();
            $('#previewContainer').html('');
            croppedBlob = null;
            showToast('Form cleared successfully.', 'bg-info');
        });

        // SUBMIT FORM
        $('#galleryForm').submit(function (e) {
            e.preventDefault();

            const title = $('#Title').val().trim();
            if (!title) {
                showToast('Please enter title.', 'bg-danger');
                return;
            }
            if (!croppedBlob) {
                showToast('Please crop the image before submitting.', 'bg-danger');
                return;
            }

            const formData = new FormData($('#galleryForm')[0]);
            formData.delete("imageUrl");
            formData.append("imageUrl", croppedBlob, "cropped-image.jpg");

            $.ajax({
                url: '@Url.Action("Create", "Gallery")',
                type: 'POST',
                data: formData,
                processData: false,
                contentType: false,
                success: function (res) {
                    if (res.success) {
                        showToast(res.message, 'bg-success');
                        setTimeout(() => window.location.href = '/admin/gallery', 2000);
                    } else {
                        showToast(res.message, 'bg-danger');
                    }
                },
                error: function () {
                    showToast('Something went wrong.', 'bg-danger');
                }
            });
        });

    </script>
}
