@model List<TourTravel.Controllers.PackageDto>
@await Component.InvokeAsync("HeroSection")

<div class="tour-area py-120">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 mx-auto">
                <div class="site-heading text-center">
                    <span class="site-title-tagline">Search Results</span>
                    <h2 class="site-title text-warning">Available Tour Packages</h2>
                    <p>Discover the best tour packages matching your preferences and destination.</p>
                </div>
            </div>
        </div>

        @if (Model == null || !Model.Any())
        {
            <p class="text-center text-muted mt-4">No packages found for the selected filters.</p>
        }
        else
        {
            <div class="row align-items-center">
                @foreach (var pkg in Model)
                {
                    <div class="col-md-6 col-lg-4">
                        <div class="tour-item">
                            <div class="tour-img">


                                <img src="@(pkg.PackageImage)"
                                     alt="@pkg.Name">
                            </div>

                            <div class="tour-meta">
                                <ul>
                                    <li><i class="far fa-clock"></i> @pkg.Duration</li>
                                    <li><i class="far fa-user-friends"></i> @pkg.MaxPerson Person</li>
                                    <li><i class="far fa-map-marker-alt"></i> @pkg.CityName</li>
                                </ul>
                            </div>

                            <div class="tour-info">
                                <a href="/Package/Details/@pkg.Id">
                                    <h5>@pkg.Name</h5>
                                </a>
                            </div>

                            <div class="tour-footer">
                                <div class="tour-price">
                                    ₹@pkg.BasePrice.ToString("0") <small>/per person</small>
                                </div>
                                @*          <a href="/Package/Details/@pkg.Id" class="tour-btn">
                        Book Now <i class="far fa-arrow-right"></i>
                        </a> *@
                                @*  <a asp-controller="SearchTour" asp-action="SearchTourDetails" asp-route-id="@pkg.Id" class="tour-btn">
                        Book Now <i class="far fa-arrow-right"></i>
                        </a> *@
                                <button type="button" class="tour-btn book-now-btn"
                                        data-package-id="@pkg.Id"
                                        data-bs-toggle="modal" data-bs-target="#contactModal">
                                    Book Now <i class="far fa-arrow-right"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</div>


<!-- Contact Form Modal -->
<div class="modal fade" id="contactModal" tabindex="-1" aria-labelledby="contactModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content p-4">
            <div class="modal-header border-0">
                <h5 class="modal-title fw-semibold" id="contactModalLabel">
                    <i class="far fa-envelope me-2 text-warning"></i> Enquiry Form
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <div class="modal-body">
                <form method="post" action="" id="contact-form">

                    <div class="row g-4">

                        <!-- Name -->
                        <div class="col-md-6">
                            <label class="form-label fw-semibold">Full Name</label>
                            <div class="input-group custom-input-group">
                                <span class="input-group-text"><i class="far fa-user"></i></span>
                                <input type="text" id="name" name="name" class="form-control custom-input" placeholder="Enter your name" required>
                            </div>
                        </div>

                        <!-- Email -->
                        <div class="col-md-6">
                            <label class="form-label fw-semibold">Email Address</label>
                            <div class="input-group custom-input-group">
                                <span class="input-group-text"><i class="far fa-envelope"></i></span>
                                <input type="email" id="email" name="email" class="form-control custom-input" placeholder="Enter your email" required>
                            </div>
                        </div>

                        <!-- Phone -->
                        <div class="col-md-6">
                            <label class="form-label fw-semibold">Phone Number</label>
                            <div class="input-group custom-input-group">


                                <!-- Country Code Dropdown -->
                                <select id="countryCode" class="form-select" style="max-width: 110px;">
                                </select>

                                <!-- Phone Number -->
                                <input type="tel" id="phoneNumber" name="PhoneNumber"
                                       class="form-control custom-input"
                                       placeholder="Enter phone number"
                                       maxlength="10"
                                       pattern="[0-9]*"
                                       inputmode="numeric"
                                       required>

                            </div>
                        </div>


                    </div>
                    <!-- IRCTC Style Captcha -->
                    <div class="mt-4">
                        <label class="form-label fw-semibold">Enter CAPTCHA</label>

                        <div class="d-flex align-items-center gap-3">
                            <img id="captchaImage"
                                 src="/Captcha/GenerateCaptcha"
                                 alt="Captcha"
                                 style="height:60px; border:1px solid #ccc;" />

                            <button type="button" id="refreshCaptcha" class="btn btn-outline-secondary">
                                <i class="fas fa-sync"></i>
                            </button>
                        </div>

                        <input type="text"
                               id="captchaInput"
                               class="form-control mt-2"
                               placeholder="Enter the characters shown above"
                               required />
                    </div>


                    <div class="text-end mt-4">
                        <button type="submit" class="btn btn-warning px-4">
                            Save
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <!-- Google reCAPTCHA API -->
    <script src="https://www.google.com/recaptcha/api.js" async defer></script>

    <script>
        let captchaToken = "";
        let selectedPackageId = null;

        const countryCodes = [
            { name: "India", code: "+91" },
            { name: "United States", code: "+1" },
            { name: "United Kingdom", code: "+44" },
            { name: "Australia", code: "+61" },
            { name: "Canada", code: "+1" },
            { name: "Singapore", code: "+65" },
            { name: "UAE", code: "+971" },
            { name: "Germany", code: "+49" },
            { name: "France", code: "+33" },
            { name: "China", code: "+86" },
            { name: "Japan", code: "+81" },
            { name: "Nepal", code: "+977" },
            { name: "Sri Lanka", code: "+94" },
            { name: "Bangladesh", code: "+880" },
            { name: "Pakistan", code: "+92" }
        ];

        const countryDropdown = document.getElementById("countryCode");

        countryCodes.forEach(c => {
            const option = document.createElement("option");
            option.value = c.code;
            option.textContent = `${c.code} (${c.name})`;
            countryDropdown.appendChild(option);
        });

        // Set default country to India
        countryDropdown.value = "+91";

        document.addEventListener("DOMContentLoaded", () => {
            const phoneInput = document.getElementById("phoneNumber");

            phoneInput.addEventListener("input", function () {
                this.value = this.value.replace(/\D/g, ""); // removes all non-numeric characters
            });

            const form = document.getElementById("contact-form");
            const bookNowButtons = document.querySelectorAll(".book-now-btn");

            // ⭐ Load Captcha (Image + Text)
            async function refreshCaptcha() {
                try {
                    const res = await fetch("/Captcha/GenerateCaptcha", {
                        method: "GET",
                        cache: "no-store"
                    });

                    const data = await res.json();

                    // Show Captcha Image
                    document.getElementById("captchaImage").src = data.captchaImage;

                    // Store Captcha Text Token
                    captchaToken = data.captchaText;

                    console.log("Captcha from server:", captchaToken);

                } catch (error) {
                    console.error("Captcha loading failed:", error);
                }
            }

            // Refresh Captcha when clicking refresh button
            document.getElementById("refreshCaptcha").addEventListener("click", refreshCaptcha);

            // Load captcha when modal opens
            const modal = document.getElementById("contactModal");
            modal.addEventListener("shown.bs.modal", refreshCaptcha);

            modal.addEventListener("hidden.bs.modal", () => {

                form.reset();
                captchaToken = "";
                document.getElementById("captchaInput").value = "";
                document.getElementById("captchaImage").src =
                    "/Captcha/GenerateCaptcha?" + new Date().getTime();
            });


            // Capture package id clicked
            bookNowButtons.forEach(btn => {
                btn.addEventListener("click", (e) => {
                    selectedPackageId = e.currentTarget.getAttribute("data-package-id");
                });
            });

            // ⭐ Submit Form + Validate Captcha
            form.addEventListener("submit", async (e) => {
                e.preventDefault();

                const phone = document.getElementById("phoneNumber").value.trim();

                if (!/^[0-9]{10}$/.test(phone)) {
                    return showToast("Please enter a valid 10-digit phone number.", "error");
                }

                const userCaptchaInput = document.getElementById("captchaInput").value.trim();
                if (!userCaptchaInput) {
                    alert("⚠️ Please enter the CAPTCHA.");
                    return;
                }

                const formData = {
                    name: form.name.value.trim(),
                    email: form.email.value.trim(),
                    phoneNumber: form.PhoneNumber.value.trim(),

                    // Captcha
                    CaptchaInput: userCaptchaInput,
                    CaptchaToken: captchaToken
                };

                // const phoneRegex = /^(\+?\d{1,3}[- ]?)?\d{10,15}$/;


                // // ❌ Phone number validation
                // if (!phoneRegex.test(phoneNumber)) {
                //     return showToast("Enter a valid 10-digit mobile number starting with 6–9.", "error");
                // }


                try {
                    const response = await fetch("@ViewBag.Baseurl/api/contact/addEnquiry", {
                        method: "POST",
                        headers: {
                            "Content-Type": "application/json",
                        },
                        body: JSON.stringify(formData)
                    });

                    const result = await response.json();

                    if (response.ok) {

                        showToast("✅ Enquiry sent successfully!");

                        // Reset form
                        form.reset();
                        refreshCaptcha();

                        const modalInstance = bootstrap.Modal.getInstance(document.getElementById("contactModal"));
                        modalInstance.hide();

                        // Redirect to details page
                        if (selectedPackageId) {
                            window.location.href = `/SearchTour/SearchTourDetails/${selectedPackageId}`;
                        }

                    } else {
                        showToast("❌ " + (result.message || "Failed to send enquiry."));
                    }

                } catch (error) {
                    console.error("Error submitting enquiry:", error);
                    alert("⚠️ Something went wrong. Please try again later.");
                }
            });
        });
    </script>

}
