@model TourTravel.Models.HeroSlider
@{
    ViewData["Title"] = "Edit Hero Slider";
    Layout = "~/Admin/Views/Shared/_Layout-common.cshtml";
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.5.13/cropper.min.css" rel="stylesheet" />
<script src="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.5.13/cropper.min.js"></script>

<div class="container mt-4">
    <div class="card shadow border-0">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0"><i class="fa fa-edit me-2"></i>Edit Hero Slider</h5>
            <a href="@Url.Action("Index", "HeroSlider")" class="btn btn-light btn-sm">
                <i class="fa-solid fa-arrow-left"></i> Back
            </a>
        </div>

        <div class="card-body">
            <form id="heroSliderEditForm" asp-action="Edit" asp-route-id="@Model.Id"
                  method="post" enctype="multipart/form-data" novalidate>

                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Id" />

                <div class="row">

                    <div class="col-md-6 mb-3">
                        <label class="form-label">Title <span class="text-danger">*</span></label>
                        <input asp-for="Title" id="Title" class="form-control" required />
                    </div>

                    <div class="col-md-6 mb-3">
                        <label class="form-label">SubTitle <span class="text-danger">*</span></label>
                        <input asp-for="SubTitle" id="SubTitle" class="form-control" required />
                    </div>

                    <div class="col-md-12 mb-3">
                        <label class="form-label">Description <span class="text-danger">*</span></label>
                        <textarea asp-for="Description" id="Description" class="form-control"></textarea>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label class="form-label">Current Image</label><br />
                        @if (!string.IsNullOrEmpty(Model.Image))
                        {
                            <img src="@Model.Image"
                                 class="current-image rounded border mb-2"
                                 style="max-width:250px;max-height:150px;object-fit:cover;" />
                        }
                        <input type="file" id="ImageFile" name="ImageFile"
                               class="form-control" accept="image/*" />
                    </div>

                </div>

                <div id="previewContainer" class="mb-3"></div>

                <div class="d-flex justify-content-end gap-2 mt-3">
                    <button type="submit" class="btn btn-success">Update</button>
                    <button type="button" id="clearFormBtn" class="btn btn-secondary">Clear</button>
                </div>

            </form>
        </div>
    </div>
</div>


<!-- ⭐ Cropper Modal -->
<div class="modal fade" id="cropperModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" style="max-width:900px;">
        <div class="modal-content">

            <div class="modal-header">
                <h5 class="modal-title">Crop Image (1200×600)</h5>
                <button class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body cropper-wrapper">
                <div class="cropper-container-fixed">
                    <img id="cropImage" />
                </div>
            </div>


            <div class="modal-footer">
                <button id="cropBtn" class="btn btn-primary">Crop & Save</button>
                <button class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
            </div>

        </div>
    </div>
</div>

<style>
    .cropper-wrapper {
        height: 600px;
        overflow: hidden;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 0;
    }

    .cropper-container-fixed {
        width: 100%;
        height: 100%;
        max-width: 780px;
        max-height: 580px;
        display: flex;
        align-items: center;
        justify-content: center;
        overflow: hidden;
        background: #f9f9f9;
    }

    #cropImage {
        max-width: 100%;
        max-height: 100%;
        display: block;
    }
</style>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.ckeditor.com/ckeditor5/40.2.0/classic/ckeditor.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.5.13/cropper.min.js"></script>

    <script>
        let editor;
        let cropper = null;
        let croppedBlob = null;

        ClassicEditor.create(document.querySelector('#Description'))
            .then(e => editor = e);

        /* ============================
           ⭐ FILE SELECT → OPEN MODAL
           ============================ */
        $('#ImageFile').on('change', function (e) {

            const file = e.target.files[0];
            if (!file) return;

            // Hide old image
            $('.current-image').hide();

            // Validate
            const allowed = ['image/png', 'image/jpeg', 'image/jpg'];
            if (!allowed.includes(file.type)) {
                showToast("Only PNG, JPG, JPEG allowed.", "bg-danger");
                return;
            }

            if (file.size > 5 * 1024 * 1024) {
                showToast("Image must be less than 5MB.", "bg-danger");
                return;
            }

            const reader = new FileReader();
            reader.onload = function (event) {

                $('#cropImage').attr('src', event.target.result);

                if (cropper) {
                    cropper.destroy();
                    cropper = null;
                }

                const modalEL = $('#cropperModal');
                const modal = new bootstrap.Modal(document.getElementById('cropperModal'));
                modal.show();

                modalEL.off('shown.bs.modal').on('shown.bs.modal', function () {
                           cropper = new Cropper(document.getElementById('cropImage'), {
            aspectRatio: 2 / 1,
            viewMode: 2,              // ⭐ FIXES DOUBLE IMAGE / OUT OF BOUNDS
            autoCropArea: 1,
            responsive: true,
            zoomable: true,
            movable: true,
            dragMode: "move",
            cropBoxResizable: false,
            background: false,        // ⭐ Remove ghost background
            minCanvasWidth: 0,
            minCanvasHeight: 0,
            restore: false,
        });

                });

                modalEL.off('hidden.bs.modal').on('hidden.bs.modal', function () {
                    if (cropper) {
                        cropper.destroy();
                        cropper = null;
                    }
                });
            };

            reader.readAsDataURL(file);
        });

        /* ============================
           ⭐ CROP BUTTON
           ============================ */
        $('#cropBtn').click(function () {

            if (!cropper) return;

            cropper.getCroppedCanvas({
                width: 1200,
                height: 600
            }).toBlob(function (blob) {

                croppedBlob = blob;
                const previewUrl = URL.createObjectURL(blob);

                $('#previewContainer').html(`
                    <img src="${previewUrl}"
                         class="img-thumbnail mt-2 shadow-sm"
                         style="max-width:260px;border-radius:8px;" />
                `);

                $('#cropperModal').modal('hide');
            });
        });

        /* ============================
           ⭐ CLEAR
           ============================ */
        $('#clearFormBtn').click(function () {
            $('#heroSliderEditForm')[0].reset();
            $('#previewContainer').empty();
            if (editor) editor.setData('');
            croppedBlob = null;
            showToast("Form cleared successfully", "bg-info");
        });

        /* ============================
           ⭐ FORM SUBMIT
           ============================ */
        $('#heroSliderEditForm').submit(function (e) {
            e.preventDefault();

            $('#Description').val(editor.getData());

            const title = $('#Title').val().trim();
            const subtitle = $('#SubTitle').val().trim();
            const desc = $('#Description').val().trim();
            const file = $('#ImageFile')[0].files[0];

            if (!title || !subtitle || !desc) {
                showToast("Please fill all required fields.", "bg-danger");
                return;
            }

            if (file && !croppedBlob) {
                showToast("Please crop the selected image.", "bg-danger");
                return;
            }

            const formData = new FormData($('#heroSliderEditForm')[0]);

            if (croppedBlob) {
                formData.delete("ImageFile");
                formData.append("ImageFile", croppedBlob, "cropped-image.jpg");
            }

            $.ajax({
                url: '@Url.Action("Edit", "HeroSlider", new { id = Model.Id })',
                type: "POST",
                data: formData,
                processData: false,
                contentType: false,
                success: function (response) {
                    if (response.success) {
                        showToast(response.message, "bg-success");
                        setTimeout(() => window.location.href = "/admin/heroslider", 3000);
                    } else {
                        showToast(response.message, "bg-danger");
                    }
                },
                error: function () {
                    showToast("Server error. Please try again.", "bg-danger");
                }
            });

        });
    </script>
}
