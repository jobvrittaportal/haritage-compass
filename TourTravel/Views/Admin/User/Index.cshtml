@model List<TourTravel.Models.ApplicationUser>

@{
    ViewData["Title"] = "User Management";
    Layout = "~/Admin/Views/Shared/_Layout-common.cshtml";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between mb-3">
        <h3>User Management</h3>
        <button class="btn btn-primary" id="btnAddUser">   <i class="fa fa-plus"></i> New</button>
    </div>

    <table class="table table-bordered table-hover" id="userTable">
        <thead class="">
            <tr>
                <th>S.No</th>
                <th>Name</th>
                <th>Email</th>
                <th>Status</th>
                <th style="width:180px;">Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                var sno = 1; // Initialize serial number
                foreach (var user in Model)
                {
                    <tr data-id="@user.Id" data-name="@user.Name" data-email="@user.Email" data-active="@user.IsActive">
                        <td>@sno</td> <!-- Show S.No -->
                        <td>@user.Name</td>
                        <td>@user.Email</td>
                        <td>
                            @if (user.IsActive)
                            {
                                <span class="text-success">Active</span>
                            }
                            else
                            {
                                <span class="text-danger">Inactive</span>
                            }
                        </td>
                        <td>
                            <button class="btn btn-sm btn-primary me-1"> <i class="fa fa-edit"></i></button>
                            <button class="btn btn-sm btn-danger btn-delete"><i class="fa fa-trash"></i></button>
                        </td>
                    </tr>
                    sno++; // Increment serial number
                }
            }
            else
            {
                <tr><td colspan="5" class="text-center text-muted">No users found.</td></tr>
            }
        </tbody>
    </table>
</div>

<!-- ðŸŸ¢ Modal (Static Form) -->
<div class="modal fade" id="userModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form id="userForm">
                <div class="modal-header">
                    <h5 class="modal-title" id="modalTitle">Add User</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" id="UserId" name="Id" />

                    <div class="mb-3">
                        <label class="form-label">Name</label>
                        <input type="text" class="form-control" id="Name" name="Name" required />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Email</label>
                        <input type="email" class="form-control" id="Email" name="Email" required />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Password</label>
                        <input type="text" class="form-control" id="Password" name="Password" required />
                    </div>

                    <div class="form-check form-switch mb-3">
                        <input class="form-check-input" type="checkbox" id="IsActive" name="IsActive" checked>
                        <label class="form-check-label" for="IsActive">Active</label>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="submit" class="btn btn-success" id="btnSave">Save</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteConfirmModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered" style="max-width: 400px;">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title w-100 text-center">Confirm Delete</h5>
            </div>
            <div class="modal-body text-center">
                Are you sure you want to delete?
            </div>
            <div class="modal-footer d-flex justify-content-center">
                <button id="confirmDeleteBtn" class="btn btn-danger">Delete</button>
                <button class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        $(function () {

            // âœ… Open modal for Add
            $('#btnAddUser').click(function () {
                $('#modalTitle').text('Add User');
                $('#userForm')[0].reset();
                $('#UserId').val('');
                $('#userModal').modal('show');
            });

            // âœ… Open modal for Edit
            $('#userTable').on('click', '.btn-primary', function () {
                const row = $(this).closest('tr');
                $('#modalTitle').text('Edit User');
                $('#UserId').val(row.data('id'));
                $('#Name').val(row.data('name'));
                $('#Email').val(row.data('email'));
                $('#Password').val('');
                $('#IsActive').prop('checked', row.data('active') === true || row.data('active') === "True");
                $('#userModal').modal('show');
            });

           

            $(function () {
                let deleteUserId = null;

                // ðŸ—‘ Open Delete Confirmation Modal
                $('#userTable').on('click', '.btn-delete', function () {
                    deleteUserId = $(this).closest('tr').data('id');
                    $('#deleteConfirmModal').modal('show');
                });

                // âœ… Confirm Delete
                $('#confirmDeleteBtn').click(function () {
                    if (!deleteUserId) return;

                    $.ajax({
                        url: '@Url.Action("Delete", "User")',
                        type: 'POST',
                        data: { id: deleteUserId },
                        success: function (res) {
                            $('#deleteConfirmModal').modal('hide');

                            if (res.success) {
                                showToast('User deleted successfully!', 'bg-success');
                                setTimeout(() => location.reload(), 3000);
                            } else {
                                showToast(res.message || 'Failed to delete user.', 'bg-danger');
                            }
                        },
                        error: function () {
                            $('#deleteConfirmModal').modal('hide');
                            showToast('An error occurred while deleting the user.', 'bg-danger');
                        }
                    });
                });
            });

            // âœ… Add/Edit user submit
            $('#userForm').submit(function (e) {
                e.preventDefault();

                const data = {
                    Id: $('#UserId').val(),
                    Name: $('#Name').val(),
                    Email: $('#Email').val(),
                    Password: $('#Password').val(),
                    IsActive: $('#IsActive').is(':checked')
                };

                const url = data.Id ? '@Url.Action("Edit", "User")' : '@Url.Action("Create", "User")';

                $.ajax({
                    url: url,
                    type: 'POST',
                    data: data,
                    success: function (res) {
                        if (res.success) {
                            $('#userModal').modal('hide');
                            showToast(res.message, 'bg-success');
                            setTimeout(() => location.reload(), 3000);
                        } else {
                            showToast(res.message || 'Something went wrong.', 'bg-danger');
                        }
                    },
                    error: function () {
                        showToast('An unexpected error occurred.', 'bg-danger');
                    }
                });
            });
        });

       
    </script>
}

