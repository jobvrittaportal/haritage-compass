@model List<TourTravel.Controllers.PackageDto>
@await Component.InvokeAsync("HeroSection")

<div class="tour-area py-120">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 mx-auto">
                <div class="site-heading text-center">
                    <span class="site-title-tagline">Search Results</span>
                    <h2 class="site-title text-warning">Available Tour Packages</h2>
                    <p>Discover the best tour packages matching your preferences and destination.</p>
                </div>
            </div>
        </div>

        @if (Model == null || !Model.Any())
        {
            <p class="text-center text-muted mt-4">No packages found for the selected filters.</p>
        }
        else
        {
            <div class="row align-items-center">
                @foreach (var pkg in Model)
                {
                    <div class="col-md-6 col-lg-4">
                        <div class="tour-item">
                            <div class="tour-img">
                                @if (pkg.BasePrice < 15000)
                                {
                                    <span class="tour-sale">Sale</span>
                                }

                                <img src="@(pkg.PackageImage)"
                                     alt="@pkg.Name">
                                <a href="#" class="tour-wish"><i class="far fa-heart"></i></a>
                            </div>

                            <div class="tour-meta">
                                <ul>
                                    <li><i class="far fa-clock"></i> @pkg.Duration</li>
                                    <li><i class="far fa-user-friends"></i> @pkg.MaxPerson Person</li> 
                                    <li><i class="far fa-map-marker-alt"></i> @pkg.CityName</li>
                                </ul>
                            </div>

                            <div class="tour-info">
                                <a href="/Package/Details/@pkg.Id">
                                    <h5>@pkg.Name</h5>
                                </a>
                                <div class="tour-rating">
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    @*                                     <span>(@pkg.ReviewCount Reviews)</span>
                            *@
                                </div>
                            </div>

                            <div class="tour-footer">
                                <div class="tour-price">
                                    ₹@pkg.BasePrice.ToString("0") <small>/per person</small>
                                </div>
                                @*          <a href="/Package/Details/@pkg.Id" class="tour-btn">
                        Book Now <i class="far fa-arrow-right"></i>
                        </a> *@
                               @*  <a asp-controller="SearchTour" asp-action="SearchTourDetails" asp-route-id="@pkg.Id" class="tour-btn">
                                    Book Now <i class="far fa-arrow-right"></i>
                                </a> *@
                                <button type="button" class="tour-btn book-now-btn"
                                        data-package-id="@pkg.Id"
                                        data-bs-toggle="modal" data-bs-target="#contactModal">
                                    Book Now <i class="far fa-arrow-right"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</div>


<!-- Contact Form Modal -->
<div class="modal fade" id="contactModal" tabindex="-1" aria-labelledby="contactModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content p-4">
            <div class="modal-header border-0">
                <h5 class="modal-title fw-semibold" id="contactModalLabel">
                    <i class="far fa-envelope me-2 text-warning"></i> Enquiry Form
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <div class="modal-body">
                <form method="post" action="" id="contact-form">

                    <div class="row g-3">
                        <div class="col-md-6">
                            <div class="form-group">
                                <input type="text" id="name" class="form-control" name="name" placeholder="Your Name" required>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <input type="email" id="email" class="form-control" name="email" placeholder="Your Email" required>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <input type="text" id="phoneNumber" class="form-control" name="PhoneNumber" placeholder="Your Phone Number" required>
                            </div>
                        </div>
                      
                    </div>
                    <!-- Google reCAPTCHA -->
                    <div class="g-recaptcha mt-4 mb-3" data-sitekey="6LdyVAQsAAAAAOv8DkGgtnjpuDt0FEdNmPnsgz3F"></div>


                    <div class="text-end mt-4">
                        <button type="submit" class="btn btn-warning px-4">
                            Save
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <!-- Google reCAPTCHA API -->
    <script src="https://www.google.com/recaptcha/api.js" async defer></script>

    <script>
        let selectedPackageId = null;


        document.addEventListener("DOMContentLoaded", () => {
            const form = document.getElementById("contact-form");
            const bookNowButtons = document.querySelectorAll(".book-now-btn");

            // Capture clicked package
            bookNowButtons.forEach(btn => {
                btn.addEventListener("click", (e) => {
                    selectedPackageId = e.currentTarget.getAttribute("data-package-id");
                });
            });

            form.addEventListener("submit", async (e) => {
                e.preventDefault();

                // Verify CAPTCHA first
                const captchaResponse = grecaptcha.getResponse();
                if (!captchaResponse) {
                    alert("⚠️ Please verify that you're not a robot.");
                    return;
                }

                const formData = {
                    name: form.name.value.trim(),
                    email: form.email.value.trim(),
                    phoneNumber: form.PhoneNumber.value.trim(),
                    captchaToken: captchaResponse
                };

                try {
                    const response = await fetch("https://stg-jungleave-back.jobvritta.com/api/contact/addEnquiry", {
                        method: "POST",
                        headers: {
                            "Content-Type": "application/json",
                        },
                        body: JSON.stringify(formData)
                    });

                    const result = await response.json();

                    if (response.ok) {
                        alert("✅ Enquiry sent successfully!");
                        form.reset();
                        grecaptcha.reset(); // reset CAPTCHA

                        const modal = bootstrap.Modal.getInstance(document.getElementById("contactModal"));
                        modal.hide();

                        if (selectedPackageId) {
                            window.location.href = `/SearchTour/SearchTourDetails/${selectedPackageId}`;
                        }

                    } else {
                        alert("❌ " + (result.message || "Failed to send enquiry."));
                    }
                } catch (error) {
                    console.error("Error submitting enquiry:", error);
                    alert("⚠️ Something went wrong. Please try again later.");
                }
            });
        });
    </script>
}
